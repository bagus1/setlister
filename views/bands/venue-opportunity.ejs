<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-start align-items-center">
            <a href="/bands/<%= band.id %>" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Back to Band
            </a>
            <a href="/bands/<%= band.id %>/venues" class="btn btn-outline-secondary">
                <i class="bi bi-building"></i> Back to Band Venues
            </a>
        </div>
    </div>
</div>

<div class="row">
    <!-- Left Column: Venue Details & Gig History -->
    <div class="col-lg-9">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-building"></i> Venue Details
                </h5>
                <a href="/venues/<%= venue.id %>/edit?returnUrl=<%= encodeURIComponent(`/bands/${band.id}/venues/${venue.id}`) %>" 
                   class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-pencil"></i> Edit Venue
                </a>
            </div>
            <div class="card-body">
                <h6><%= venue.name %></h6>
                
                <!-- Basic Info -->
                <div class="mb-3">
                    <% if (venue.address || venue.city || venue.state) { %>
                        <p class="mb-1">
                            <i class="bi bi-geo-alt text-primary"></i>
                            <% 
                                // Build full address for Google Maps
                                let fullAddress = '';
                                if (venue.address) fullAddress += venue.address;
                                if (venue.city) {
                                    if (fullAddress) fullAddress += ', ';
                                    fullAddress += venue.city;
                                }
                                if (venue.state) {
                                    if (fullAddress) fullAddress += ', ';
                                    fullAddress += venue.state;
                                }
                                if (venue.zipCode) {
                                    if (fullAddress) fullAddress += ' ';
                                    fullAddress += venue.zipCode;
                                }
                                
                                // Create Google Maps search URL
                                const mapsUrl = `https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(fullAddress)}`;
                            %>
                            <a href="<%= mapsUrl %>" target="_blank" class="text-decoration-none">
                                <% if (venue.address) { %><%= venue.address %><br><% } %>
                                <%= venue.city %><% if (venue.city && venue.state) { %>, <% } %><%= venue.state %> <%= venue.zipCode || '' %>
                                <i class="bi bi-box-arrow-up-right text-muted ms-1" style="font-size: 0.8em;"></i>
                            </a>
                        </p>
                    <% } %>
                    
                    <% if (venue.venueType) { %>
                        <p class="mb-1">
                            <i class="bi bi-tag text-success"></i>
                            <span class="badge bg-secondary"><%= venue.venueType.displayName || venue.venueType.name %></span>
                        </p>
                    <% } %>
                    
                    <% if (venue.capacity) { %>
                        <p class="mb-1">
                            <i class="bi bi-people text-info"></i>
                            Capacity: <%= venue.capacity %>
                        </p>
                    <% } %>
                    
                    <% if (venue.fees) { %>
                        <p class="mb-1">
                            <i class="bi bi-currency-dollar text-warning"></i>
                            Fee Range: <%= venue.fees %>
                        </p>
                    <% } %>
                </div>

                <!-- Contact Information -->
                <% if (venue.contacts && venue.contacts.length > 0) { %>
                    <h6><i class="bi bi-telephone"></i> Contact Info</h6>
                    <div class="mb-3">
                        <% venue.contacts.forEach(contact => { %>
                            <div class="mb-2">
                                <strong><%= contact.contactType.displayName %>:</strong>
                                <% if (contact.contactType.name === 'EMAIL') { %>
                                    <a href="mailto:<%= contact.value %>"><%= contact.value %></a>
                                <% } else if (contact.contactType.name === 'PHONE_CALL') { %>
                                    <a href="tel:<%= contact.value %>"><%= contact.value %></a>
                                <% } else if (contact.contactType.name === 'TEXT') { %>
                                    <a href="sms:<%= contact.value %>"><%= contact.value %></a>
                                <% } else { %>
                                    <%= contact.value %>
                                <% } %>
                                <% if (contact.label) { %>
                                    <small class="text-muted">(<%= contact.label %>)</small>
                                <% } %>
                            </div>
                        <% }); %>
                    </div>
                <% } %>

                <!-- Social Media -->
                <% if (venue.socials && venue.socials.length > 0) { %>
                    <h6><i class="bi bi-share"></i> Social Media</h6>
                    <div class="mb-3">
                        <% venue.socials.forEach(social => { %>
                            <div class="mb-2">
                                <% if (social.url) { %>
                                    <a href="<%= social.url %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                        <i class="<%= social.socialType.iconClass || 'bi-link' %>"></i>
                                        <%= social.socialType.displayName %>
                                        <% if (social.handle && social.handle !== 'website') { %>
                                            @<%= social.handle %>
                                        <% } %>
                                    </a>
                                <% } else { %>
                                    <span class="badge bg-light text-dark">
                                        <i class="<%= social.socialType.iconClass || 'bi-link' %>"></i>
                                        <%= social.socialType.displayName %>: <%= social.handle %>
                                    </span>
                                <% } %>
                            </div>
                        <% }); %>
                    </div>
                <% } %>

                <!-- Notes -->
                <% if (venue.notes) { %>
                    <h6><i class="bi bi-journal-text"></i> Notes</h6>
                    <p class="small text-muted"><%= venue.notes %></p>
                <% } %>
            </div>
        </div>

        <!-- Gig History Section -->
        <div class="card mt-3">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-calendar-event"></i> Gig History
                </h5>
            </div>
            <div class="card-body">
                <% if (gigs && gigs.length > 0) { %>
                    <div class="list-group">
                        <% gigs.forEach(gig => { %>
                            <a href="/bands/<%= band.id %>/gigs/<%= gig.id %>" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between align-items-start">
                                    <div>
                                        <h6 class="mb-1">
                                            <%= new Date(gig.gigDate).toLocaleDateString('en-US', { 
                                                weekday: 'short', 
                                                year: 'numeric', 
                                                month: 'short', 
                                                day: 'numeric' 
                                            }) %>
                                        </h6>
                                        <% if (gig.gigTime) { %>
                                            <p class="mb-1">
                                                <i class="bi bi-clock text-muted"></i>
                                                <%= gig.gigTime %>
                                            </p>
                                        <% } %>
                                        <% if (gig.opportunity) { %>
                                            <small class="text-muted">
                                                From: <a href="/bands/<%= band.id %>/opportunities/<%= gig.opportunity.id %>"><%= gig.opportunity.name %></a>
                                            </small>
                                        <% } %>
                                    </div>
                                    <div class="text-end">
                                        <% if (gig.fee) { %>
                                            <span class="badge bg-success">$<%= gig.fee %></span>
                                        <% } %>
                                        <% if (gig.ticketLink) { %>
                                            <a href="<%= gig.ticketLink %>" target="_blank" class="btn btn-outline-primary btn-sm ms-1">
                                                <i class="bi bi-ticket"></i>
                                            </a>
                                        <% } %>
                                        <% if (gig.facebookEventLink) { %>
                                            <a href="<%= gig.facebookEventLink %>" target="_blank" class="btn btn-outline-primary btn-sm ms-1">
                                                <i class="bi bi-facebook"></i>
                                            </a>
                                        <% } %>
                                    </div>
                                </div>
                                <% if (gig.notes) { %>
                                    <p class="mb-0 mt-2 small text-muted"><%= gig.notes %></p>
                                <% } %>
                            </a>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="text-muted">No gigs played at this venue yet.</p>
                    <p class="small">Book your first gig by creating an opportunity!</p>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Right Column: Opportunities -->
    <div class="col-lg-3">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">
                    <i class="bi bi-target"></i> Opportunities
                </h5>
                <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#newOpportunityModal">
                    <i class="bi bi-plus-circle"></i> New
                </button>
            </div>
            <div class="card-body">
                <% if (opportunities && opportunities.length > 0) { %>
                    <div class="list-group">
                        <% opportunities.forEach(opportunity => { %>
                            <a href="/bands/<%= band.id %>/opportunities/<%= opportunity.id %>" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1"><%= opportunity.name %></h6>
                                    <small><%= new Date(opportunity.createdAt).toLocaleDateString() %></small>
                                </div>
                                <p class="mb-1">Status: <span class="badge bg-info"><%= opportunity.status %></span></p>
                                <% if (opportunity.offerValue) { %>
                                    <small class="text-muted">Offer: $<%= opportunity.offerValue %></small>
                                <% } %>
                            </a>
                        <% }); %>
                    </div>
                <% } else { %>
                    <p class="text-muted">No opportunities started yet.</p>
                    <p class="small">Click "New" above to start your first booking opportunity with this venue!</p>
                <% } %>
            </div>
        </div>
    </div>
</div>

<!-- New Opportunity Modal -->
<div class="modal fade" id="newOpportunityModal" tabindex="-1" aria-labelledby="newOpportunityModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="newOpportunityModalLabel">Start New Opportunity</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form action="/bands/<%= band.id %>/venues/<%= venue.id %>/opportunities" method="POST">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="name" class="form-label">Opportunity Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="Q4 2024 Gig" required>
                    </div>
                    <div class="mb-3">
                        <label for="interactionType" class="form-label">Initial Interaction Type</label>
                        <select class="form-select" id="interactionType" name="interactionType">
                            <% if (venueContactTypes && venueContactTypes.length > 0) { %>
                                <% venueContactTypes.forEach(contactType => { %>
                                    <option value="<%= contactType.name %>" <%= contactType.name === 'NOTE' ? 'selected' : '' %>>
                                        <%= contactType.displayName %>
                                    </option>
                                <% }); %>
                            <% } %>
                            <!-- Add phone options if venue has a phone number -->
                            <% if (venue.phone && venue.phone.trim()) { %>
                                <option value="PHONE_CALL">Phone Call</option>
                                <option value="TEXT_MESSAGE">Text Message</option>
                            <% } %>
                            <!-- Always include NOTE as an option -->
                            <option value="NOTE" selected>Note</option>
                            <!-- Always include IN_PERSON as an option -->
                            <option value="IN_PERSON">In-Person</option>
                            <!-- Always include OTHER as an option -->
                            <option value="OTHER">Other</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="notes" class="form-label">Why are you starting this now?</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3" placeholder="Log your first interaction..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save Opportunity</button>
                </div>
            </form>
        </div>
    </div>
</div>
