<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <% if (loggedIn && (currentUser.id === song.createdById || currentUser.role === 'moderator' || currentUser.role === 'admin')) { %>
                    <a href="/songs/<%= song.id %>/edit" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Song
                    </a>
                    <% } %>
                        <a href="/songs" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Songs
                        </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-music-note"></i> Song Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Title:</strong>
                        <p>
                            <%= song.title %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>Artist:</strong>
                        <p>
                            <% if (song.artists && song.artists.length > 0) { %>
                                <a href="/artists/<%= song.artists[0].artist.id %>" class="text-decoration-none"><%= song.artists[0].artist.name %></a>
                                    <% } else { %>
                                        <span class="text-muted">Not specified</span>
                                        <% } %>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <strong>Vocalist:</strong>
                        <p>
                            <% if (song.vocalist) { %>
                                <%= song.vocalist.name %>
                                    <% } else { %>
                                        <span class="text-muted">Not specified</span>
                                        <% } %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>Key:</strong>
                        <p>
                            <% if (song.key) { %>
                                <span class="song-key">
                                    <%= song.key %>
                                </span>
                                <% } else { %>
                                    <span class="text-muted">Not specified</span>
                                    <% } %>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <strong>Duration:</strong>
                        <p>
                            <% if (song.time) { %>
                                <%= Math.floor(song.time / 60) %>:<%= (song.time % 60).toString().padStart(2, '0' ) %>
                                        <% } else { %>
                                            <span class="text-muted">Not specified</span>
                                            <% } %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>BPM:</strong>
                        <p>
                            <% if (song.bpm) { %>
                                <i class="bi bi-speedometer"></i>
                                <%= song.bpm %> beats per minute
                                    <% } else { %>
                                        <span class="text-muted">Not specified</span>
                                        <% } %>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <strong>Added:</strong>
                        <p>
                            <%= new Date(song.createdAt).toLocaleDateString() %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <% if (loggedIn && (currentUser.id === song.createdById || currentUser.role === 'moderator' || currentUser.role === 'admin')) { %>
                    <div class="d-grid gap-2">
                        <a href="/songs/<%= song.id %>/edit" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Song
                        </a>
                        <a href="/songs/new" class="btn btn-outline-success">
                            <i class="bi bi-plus"></i> Add Another Song
                        </a>
                    </div>
                    <% } else { %>
                        <p class="text-muted">
                            <a href="/auth/login?returnTo=<%= encodeURIComponent(currentUrl) %>">Login</a> to edit songs or add new ones.
                        </p>
                        <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Links Section - Visible to all users, but add form only for logged in users -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-link-45deg"></i> Links
                </h5>
            </div>
            <div class="card-body">
                <!-- Existing Links - Visible to all users -->
                <% if (song.links && song.links.length> 0) { %>
                    <div class="mb-4">
                        <div class="list-group">
                            <% song.links.forEach(link=> { %>
                                <% if (link.type === 'audio') { %>
                                    <!-- Audio Files - Non-clickable card with embedded player -->
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-<%= getLinkIcon(link.type) %>"></i>
                                            <%= getLinkDisplayText(link) %>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <!-- Audio Player for Audio Files -->
                                            <audio controls style="max-width: 200px; height: 35px;">
                                                <source src="<%= link.url %>" type="audio/mpeg">
                                                <source src="<%= link.url %>" type="audio/wav">
                                                <source src="<%= link.url %>" type="audio/ogg">
                                                <source src="<%= link.url %>" type="audio/mp4">
                                                Your browser does not support the audio element.
                                            </audio>
                                            <a href="/songs/<%= song.id %>/links/<%= link.id %>" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-play-circle"></i> View
                                            </a>
                                            <a href="<%= link.url %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-box-arrow-up-right"></i> Open
                                            </a>
                                            <% if (loggedIn && (user.role === 'admin' || user.role === 'moderator' || link.creatorId === user.id)) { %>
                                                <button class="btn btn-sm" onclick="deleteSongLink(<%= link.id %>)" title="Delete link">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } else if (link.type === 'spotify') { %>
                                    <!-- Spotify Links - Non-clickable card with View button -->
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-<%= getLinkIcon(link.type) %>"></i>
                                            <%= getLinkDisplayText(link) %>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <a href="/songs/<%= song.id %>/links/<%= link.id %>" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-play-circle"></i> View
                                            </a>
                                            <a href="<%= link.url %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-box-arrow-up-right"></i> Open
                                            </a>
                                            <% if (loggedIn && (user.role === 'admin' || user.role === 'moderator' || link.creatorId === user.id)) { %>
                                                <button class="btn btn-sm" onclick="deleteSongLink(<%= link.id %>)" title="Delete link">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } else if (link.type === 'youtube') { %>
                                    <!-- YouTube Links - Non-clickable card with View button -->
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-<%= getLinkIcon(link.type) %>"></i>
                                            <%= getLinkDisplayText(link) %>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <a href="/songs/<%= song.id %>/links/<%= link.id %>" class="btn btn-outline-success btn-sm">
                                                <i class="bi bi-play-circle"></i> View
                                            </a>
                                            <a href="<%= link.url %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-box-arrow-up-right"></i> Open
                                            </a>
                                            <% if (loggedIn && (user.role === 'admin' || user.role === 'moderator' || link.creatorId === user.id)) { %>
                                                <button class="btn btn-sm" onclick="deleteSongLink(<%= link.id %>)" title="Delete link">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } else { %>
                                    <!-- Non-audio links - Clickable card -->
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="bi bi-<%= getLinkIcon(link.type) %>"></i>
                                            <%= getLinkDisplayText(link) %>
                                        </div>
                                        <div class="d-flex align-items-center gap-2">
                                            <a href="<%= link.url %>" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-box-arrow-up-right"></i> Open
                                            </a>
                                            <% if (loggedIn && (user.role === 'admin' || user.role === 'moderator' || link.creatorId === user.id)) { %>
                                                <button class="btn btn-sm" onclick="deleteSongLink(<%= link.id %>)" title="Delete link">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            <% } %>
                                        </div>
                                    </div>
                                <% } %>
                            <% }) %>
                        </div>
                    </div>
                <% } else { %>
                    <p class="text-muted mb-4">No links added yet.</p>
                <% } %>

                <!-- Add New Link Form - Only for logged in users -->
                <% if (loggedIn) { %>
                    <div>
                        <h6>Add New Link:</h6>
                        <form action="/songs/<%= song.id %>/links" method="POST">
                            <div class="row">
                                <div class="col-md-3">
                                    <label for="type" class="form-label">Type</label>
                                    <select class="form-select" id="type" name="type" required>
                                        <option value="">Select type...</option>
                                        <option value="youtube">YouTube</option>
                                        <option value="apple-music">Apple Music</option>
                                        <option value="audio">Audio File</option>
                                        <option value="backing-track">Backing Track</option>
                                        <option value="bandcamp">Bandcamp</option>
                                        <option value="bass tab">Bass Tab</option>
                                        <option value="bass tutorial">Bass Tutorial</option>
                                        <option value="chords">Chords</option>
                                        <option value="guitar tutorial">Guitar Tutorial</option>
                                        <option value="horn chart">Horn Chart</option>
                                        <option value="karaoke">Karaoke</option>
                                        <option value="keyboard tutorial">Keyboard Tutorial</option>
                                        <option value="lyrics">Lyrics</option>
                                        <option value="other">Other</option>
                                        <option value="sheet-music">Sheet Music</option>
                                        <option value="soundcloud">SoundCloud</option>
                                        <option value="spotify">Spotify</option>
                                        <option value="tab">Tab</option>
                                        <option value="video">Video</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="description" class="form-label">Description
                                        (Optional)</label>
                                    <input type="text" class="form-control" id="description"
                                        name="description"
                                        placeholder="e.g., Official video, Live version, etc.">
                                </div>
                                <div class="col-md-4">
                                    <label for="url" class="form-label">URL</label>
                                    <input type="url" class="form-control" id="url" name="url"
                                        placeholder="https://..." required>
                                </div>
                                <div class="col-md-1">
                                    <label class="form-label">&nbsp;</label>
                                    <button type="submit" class="btn btn-primary w-100">
                                        <i class="bi bi-plus"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                <% } else { %>
                    <div class="text-center">
                        <p class="text-muted mb-0">
                            <a href="/auth/login?returnTo=<%= encodeURIComponent(currentUrl) %>">Login</a> to add new links for this song.
                        </p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

            <!-- Music Stand Documents Section - Visible to all users, but add form only for logged in users -->
            <div class="row mt-4">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-file-earmark-text"></i> Music Stand Documents
                            </h5>
                        </div>
                        <div class="card-body">
                            <!-- Existing Music Stand Documents - Visible to all users -->
                            <% if (song.gigDocuments && song.gigDocuments.length> 0) { %>
                                <!-- Group by type -->
                                <% const groupedDocs={}; song.gigDocuments.forEach(doc=> {
                                    if (!groupedDocs[doc.type]) groupedDocs[doc.type] = [];
                                    groupedDocs[doc.type].push(doc);
                                    });
                                    %>

                                    <% Object.keys(groupedDocs).sort().forEach(type=> { %>
                                        <% const docs=groupedDocs[type]; %>
                                            <div class="mb-4">
                                                <h6 class="text-primary">
                                                    <i class="bi bi-<%= getTypeIcon(type) %>"></i>
                                                    <%= getTypeDisplayName(type) %>
                                                        <span class="badge bg-secondary ms-2">
                                                            <%= docs.length %> version<%= docs.length> 1 ? 's' : ''
                                                                    %>
                                                        </span>
                                                </h6>
                                                <div class="list-group">
                                                    <% docs.forEach(function(doc) { %>
                                                        <div class="list-group-item d-flex justify-content-between align-items-center">
                                                            <a href="/songs/<%= song.id %>/docs/<%= doc.id %>" class="text-decoration-none flex-grow-1">
                                                                <div class="d-flex justify-content-between align-items-center">
                                                                    <div>
                                                                        <i class="bi bi-file-earmark-text"></i>
                                                                        <%= getTypeDisplayName(doc.type) %> - v<%= doc.version %>
                                                                        <% if (doc.creator) { %>
                                                                            <small class="text-muted ms-2">
                                                                                by <%= doc.creator.username.includes('@') ? doc.creator.username.split('@')[0] : doc.creator.username %>
                                                                            </small>
                                                                        <% } %>
                                                                    </div>
                                                                </div>
                                                            </a>
                                                            <% if (loggedIn && currentUser && doc.createdById === currentUser.id) { %>
                                                                <div class="ms-2">
                                                                    <a href="/songs/<%= song.id %>/docs/<%= doc.id %>/edit" 
                                                                       class="btn btn-sm btn-outline-primary me-1" 
                                                                       title="Edit">
                                                                        <i class="bi bi-pencil"></i>
                                                                    </a>
                                                                    <button type="button" 
                                                                            class="btn btn-sm"
                                                                            title="Delete"
                                                                            onclick="deleteGigDocument(<%= doc.id %>, <%= song.id %>, event)">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </div>
                                                            <% } %>
                                                        </div>
                                                        <% }); %>
                                                </div>
                                            </div>
                                            <% }); %>
                                                <% } else { %>
                                                    <p class="text-muted mb-4">No Music Stand documents created yet.</p>
                                                    <% } %>

                                                        <!-- Add New Music Stand Document - Only for logged in users -->
                                                        <% if (loggedIn) { %>
                                                            <div>
                                                                <h6>Add New Music Stand Document:</h6>
                                                                <a href="/songs/<%= song.id %>/docs/new"
                                                                    class="btn btn-primary btn-sm">
                                                                    <i class="bi bi-plus-circle"></i> Create New
                                                                    Document
                                                                </a>
                                                            </div>
                                                        <% } else { %>
                                                            <div class="text-center">
                                                                                            <p class="text-muted mb-0">
                                <a href="/auth/login?returnTo=<%= encodeURIComponent(currentUrl) %>">Login</a> to add new Music Stand documents for this song.
                            </p>
                                                            </div>
                                                        <% } %>
                        </div>
                    </div>
                </div>
            </div>
