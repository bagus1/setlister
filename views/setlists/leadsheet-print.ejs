<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= pageTitle %> - Print View</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        @media print {
            body {
                margin: 0;
                padding: 0;
            }
            
            .no-print {
                display: none !important;
            }
            
            .leadsheet-page {
                page-break-after: always;
                height: 100vh;
                width: 100%;
            }
            
            .leadsheet-page:last-child {
                page-break-after: avoid;
            }
            
            .leadsheet-iframe {
                width: 100%;
                height: 100vh;
                border: none;
            }
            
            .song-header {
                position: absolute;
                top: 10px;
                left: 10px;
                background: rgba(255, 255, 255, 0.9);
                padding: 5px 10px;
                border-radius: 3px;
                font-size: 12px;
                z-index: 1000;
            }
        }
        
        @media screen {
            .leadsheet-page {
                margin-bottom: 20px;
                border: 1px solid #ddd;
                border-radius: 5px;
                overflow: hidden;
            }
            
            .leadsheet-iframe {
                width: 100%;
                height: 80vh;
                border: none;
            }
            
            .song-header {
                background: #f8f9fa;
                padding: 10px;
                border-bottom: 1px solid #ddd;
                font-weight: bold;
            }
        }
        
        .print-controls {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }
        
        .song-info {
            font-size: 14px;
            color: #666;
        }
    </style>
</head>
<body>
    <div class="print-controls no-print">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary" onclick="window.print()">
                <i class="bi bi-printer"></i> Print All Lead Sheets
            </button>
            <a href="/bands/<%= band.id %>/setlists/<%= setlist.id %>/leadsheets" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Viewer
            </a>
        </div>
    </div>

    <div class="container-fluid">
        <% if (leadsheetLinks && leadsheetLinks.length > 0) { %>
            <div class="text-center mb-4 no-print">
                <h1><%= setlist.title %> - Lead Sheets</h1>
                <p class="text-muted">Print-friendly view with page breaks between each lead sheet</p>
            </div>
            
            <% leadsheetLinks.forEach((link, index) => { %>
                <div class="leadsheet-page">
                    <div class="song-header">
                        <div><strong><%= link.songTitle %></strong></div>
                        <% if (link.artist) { %>
                            <div class="song-info">by <%= link.artist %></div>
                        <% } %>
                        <div class="song-info">Set: <%= link.set %> | Song <%= index + 1 %> of <%= leadsheetLinks.length %></div>
                    </div>
                    <iframe 
                        src="<%= link.url %>#toolbar=0&navpanes=0&scrollbar=0&statusbar=0&messages=0&scrollbar=0" 
                        class="leadsheet-iframe"
                        title="Lead Sheet: <%= link.songTitle %>">
                        <p>Your browser does not support PDFs. 
                            <a href="<%= link.url %>" target="_blank">Download the PDF</a>
                        </p>
                    </iframe>
                </div>
            <% }) %>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-file-earmark-pdf fs-1 text-muted"></i>
                <h3 class="text-muted mt-3">No Lead Sheets Available</h3>
                <p class="text-muted">This setlist doesn't have any lead sheet PDFs associated with its songs.</p>
                <a href="/bands/<%= band.id %>/setlists/<%= setlist.id %>/leadsheets" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Viewer
                </a>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
