            </a>
            
            <!-- Help Navigation -->
            <div class="card mb-4">
                <div class="card-body text-center">
                    <div class="d-flex flex-wrap justify-content-center gap-2">
                        <a href="/help/getting-started" class="btn btn-sm <%= currentUrl.includes('/getting-started') ? 'btn-primary' : 'btn-outline-primary' %>">
                            Getting Started
                        </a>
                        <a href="/help/recording-instructions" class="btn btn-sm <%= currentUrl.includes('/recording-instructions') ? 'btn-primary' : 'btn-outline-primary' %>">
