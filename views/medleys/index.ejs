<%- include('../layout', { title: title }) %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Medleys</h1>
                <% if (loggedIn) { %>
                    <a href="/medleys/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Medley
                    </a>
                <% } %>
            </div>

            <% if (medleys && medleys.length > 0) { %>
                <div class="row">
                    <% medleys.forEach(medley => { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="/medleys/<%= medley.id %>" class="text-decoration-none">
                                            <%= medley.name %>
                                        </a>
                                    </h5>
                                    
                                    <% if (medley.key) { %>
                                        <span class="badge bg-secondary me-2">
                                            Key: <%= medley.key.replace('_', '#') %>
                                        </span>
                                    <% } %>
                                    
                                    <% if (medley.vocalist) { %>
                                        <span class="badge bg-info">
                                            <%= medley.vocalist.name %>
                                        </span>
                                    <% } %>
                                </div>
                                
                                <div class="card-footer">
                                    <small class="text-muted">
                                        Created: <%= medley.createdAt.toLocaleDateString() %>
                                    </small>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else { %>
                <div class="text-center py-5">
                    <i class="bi bi-music-note-beamed display-1 text-muted"></i>
                    <h3 class="text-muted mt-3">No medleys yet</h3>
                    <p class="text-muted">Create your first medley to get started!</p>
                    <% if (loggedIn) { %>
                        <a href="/medleys/new" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create Your First Medley
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>
