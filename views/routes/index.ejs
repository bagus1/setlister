<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Application Routes</h1>
                <div class="text-muted">
                    Total Routes: <span class="badge bg-primary"><%= totalRoutes %></span>
                </div>
            </div>
            
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i>
                This page shows all registered routes in the application with their HTTP methods, paths, and function names.
                Routes are grouped by their prefix for better organization.
            </div>

            <% Object.keys(groupedRoutes).sort().forEach(prefix => { %>
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <% if (prefix === 'root') { %>
                                üè† Root Routes (/)
                            <% } else { %>
                                üìÅ <%= prefix.charAt(0).toUpperCase() + prefix.slice(1) %> Routes (/<%= prefix %>/*)
                            <% } %>
                            <span class="badge bg-secondary ms-2"><%= groupedRoutes[prefix].length %></span>
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 100px;">Method</th>
                                        <th style="width: 300px;">Path</th>
                                        <th>Function Name</th>
                                        <th style="width: 200px;">Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% groupedRoutes[prefix].forEach(route => { %>
                                        <tr>
                                            <td>
                                                <% if (route.method === 'GET') { %>
                                                    <span class="badge bg-success"><%= route.method %></span>
                                                <% } else if (route.method === 'POST') { %>
                                                    <span class="badge bg-primary"><%= route.method %></span>
                                                <% } else if (route.method === 'PUT') { %>
                                                    <span class="badge bg-warning text-dark"><%= route.method %></span>
                                                <% } else if (route.method === 'DELETE') { %>
                                                    <span class="badge bg-danger"><%= route.method %></span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary"><%= route.method %></span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <code class="text-primary"><%= route.path %></code>
                                            </td>
                                            <td>
                                                <span class="font-monospace text-success"><%= route.functionName %></span>
                                            </td>
                                            <td>
                                                <!-- Route details can be added here later if needed -->
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <% }); %>

            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">Route Information</h6>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6>HTTP Methods</h6>
                            <ul class="list-unstyled">
                                <li><span class="badge bg-success">GET</span> - Retrieve data</li>
                                <li><span class="badge bg-primary">POST</span> - Create new data</li>
                                <li><span class="badge bg-warning text-dark">PUT</span> - Update existing data</li>
                                <li><span class="badge bg-danger">DELETE</span> - Remove data</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6>Function Names</h6>
                            <ul class="list-unstyled">
                                <li><code class="text-success">anonymous</code> - Inline function</li>
                                <li><code class="text-success">functionName</code> - Named function</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
