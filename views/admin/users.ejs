<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0"><i class="bi bi-people"></i> User Management</h2>
                <div class="d-flex gap-2">
                    <a href="/admin/venue-changes" class="btn btn-outline-primary">
                        <i class="bi bi-clipboard-check"></i> Review Venue Changes
                    </a>
                    <a href="/admin" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Admin
                    </a>
                </div>
            </div>

            <div class="card bg-dark text-light">
                <div class="card-header bg-dark text-light border-secondary">
                    <h5 class="mb-0">All Users</h5>
                </div>
                <div class="card-body">
                    <% if (users && users.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover table-dark">
                                <thead>
                                    <tr>
                                        <th>User</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Activity</th>
                                        <th>Joined</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach(user => { %>
                                        <tr>
                                            <td>
                                                <div>
                                                    <strong><%= user.username %></strong>
                                                    <% if (user.id === currentUser.id) { %>
                                                        <span class="badge bg-info ms-2">You</span>
                                                    <% } %>
                                                </div>
                                            </td>
                                            <td><%= user.email %></td>
                                            <td>
                                                <span class="badge bg-<%= user.role === 'admin' ? 'danger' : user.role === 'moderator' ? 'warning' : 'secondary' %>">
                                                    <%= user.role %>
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <%= user._count.bands %> bands, 
                                                    <%= user._count.createdSongs %> songs, 
                                                    <%= user._count.createdVenues %> venues
                                                </small>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <%= new Date(user.createdAt).toLocaleDateString() %>
                                                </small>
                                            </td>
                                            <td>
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" 
                                                            type="button" 
                                                            data-bs-toggle="dropdown">
                                                        Change Role
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li>
                                                            <form method="POST" action="/admin/users/<%= user.id %>/role" class="d-inline">
                                                                <input type="hidden" name="role" value="user">
                                                                <button type="submit" 
                                                                        class="dropdown-item <%= user.role === 'user' ? 'active' : '' %>"
                                                                        <%= user.id === currentUser.id && user.role === 'admin' ? 'disabled' : '' %>>
                                                                    <i class="bi bi-person"></i> User
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form method="POST" action="/admin/users/<%= user.id %>/role" class="d-inline">
                                                                <input type="hidden" name="role" value="moderator">
                                                                <button type="submit" 
                                                                        class="dropdown-item <%= user.role === 'moderator' ? 'active' : '' %>"
                                                                        <%= user.id === currentUser.id && user.role === 'admin' ? 'disabled' : '' %>>
                                                                    <i class="bi bi-shield-check"></i> Moderator
                                                                </button>
                                                            </form>
                                                        </li>
                                                        <li>
                                                            <form method="POST" action="/admin/users/<%= user.id %>/role" class="d-inline">
                                                                <input type="hidden" name="role" value="admin">
                                                                <button type="submit" 
                                                                        class="dropdown-item <%= user.role === 'admin' ? 'active' : '' %>"
                                                                        <%= user.id === currentUser.id ? 'disabled' : '' %>>
                                                                    <i class="bi bi-shield-fill-check"></i> Admin
                                                                </button>
                                                            </form>
                                                        </li>
                                                    </ul>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <p class="text-muted">No users found.</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>