<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Musicians on The Band Plan</h1>
            <p class="lead text-muted mb-4">
                Connect with talented musicians. Click profiles to learn more or reach out about opportunities!
            </p>
        </div>
    </div>

    <% if (musicians && musicians.length > 0) { %>
        <div class="row">
            <% musicians.forEach(musician => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100" style="background: #343a40; color: #e9ecef;">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <% if (musician.photos && musician.photos.length > 0) { %>
                                    <img src="<%= musician.photos[0].filePath %>" alt="<%= musician.username %>" 
                                         class="rounded-circle mb-2" style="width: 100px; height: 100px; object-fit: cover;">
                                <% } else { %>
                                    <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-2"
                                         style="width: 100px; height: 100px;">
                                        <i class="bi bi-person-fill" style="font-size: 3rem;"></i>
                                    </div>
                                <% } %>
                                
                                <h5 class="mb-1">
                                    <a href="/musicians/<%= musician.slug %>" class="text-decoration-none" style="color: #74b9ff;">
                                        <%= musician.username %>
                                    </a>
                                </h5>
                                
                                <% if (musician.openToOpportunities) { %>
                                    <span class="badge bg-success mt-1">
                                        <i class="bi bi-envelope-check"></i> Open to Opportunities
                                    </span>
                                <% } %>
                            </div>

                            <% if (musician.instruments) { %>
                                <p class="text-muted mb-2 text-center">
                                    <i class="bi bi-music-note-beamed"></i> <%= musician.instruments %>
                                </p>
                            <% } %>

                            <% if (musician.location) { %>
                                <p class="text-muted mb-2 text-center">
                                    <i class="bi bi-geo-alt"></i> <%= musician.location %>
                                </p>
                            <% } %>

                            <% if (musician.bio) { %>
                                <p class="small mb-2" style="color: #adb5bd;">
                                    <%= musician.bio.substring(0, 150) %><%= musician.bio.length > 150 ? '...' : '' %>
                                </p>
                            <% } %>

                            <% if (musician.bands && musician.bands.length > 0) { %>
                                <hr style="border-color: #495057;">
                                <div class="small">
                                    <strong>Bands:</strong>
                                    <% musician.bands.slice(0, 3).forEach((membership, index) => { %>
                                        <% if (membership.band.slug && membership.band.isPublic) { %>
                                            <a href="/<%= membership.band.slug %>" style="color: #74b9ff;">
                                                <%= membership.band.name %>
                                            </a><%= index < Math.min(musician.bands.length, 3) - 1 ? ', ' : '' %>
                                        <% } else { %>
                                            <%= membership.band.name %><%= index < Math.min(musician.bands.length, 3) - 1 ? ', ' : '' %>
                                        <% } %>
                                    <% }) %>
                                    <% if (musician.bands.length > 3) { %>
                                        <span class="text-muted">+<%= musician.bands.length - 3 %> more</span>
                                    <% } %>
                                </div>
                            <% } %>

                            <div class="mt-3 text-center">
                                <a href="/musicians/<%= musician.slug %>" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-person"></i> View Profile
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <i class="bi bi-people display-1 text-muted"></i>
            <h3 class="mt-3 text-muted">No Public Musicians Yet</h3>
            <p class="text-muted">Be the first to create a public musician profile!</p>
            <a href="/profile/edit" class="btn btn-primary">
                <i class="bi bi-person-badge"></i> Create Your Profile
            </a>
        </div>
    <% } %>
</div>

