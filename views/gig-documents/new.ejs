<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-plus-circle"></i> New Gig Document</h1>
                <a href="/songs/<%= song.id %>" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Song
                </a>
            </div>

            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <form action="/songs/<%= song.id %>/docs" method="POST">
                                <div class="mb-3">
                                    <label for="type" class="form-label">Document Type</label>
                                    <select class="form-select" id="type" name="type" required>
                                        <option value="">Select a document type...</option>
                                        <option value="chords">Chords</option>
                                        <option value="bass-tab">Bass Tab</option>
                                        <option value="guitar-tab">Guitar Tab</option>
                                        <option value="lyrics">Lyrics</option>
                                    </select>
                                    <div class="form-text">Choose the type of document you want to create</div>
                                </div>

                                <div class="mb-3">
                                    <label for="content" class="form-label">Content</label>
                                    <textarea id="editor" name="content" style="height: 400px;"></textarea>
                                    <div class="form-text">Use the rich text editor above to create your content</div>
                                </div>

                                <div class="d-flex justify-content-between">
                                    <a href="/songs/<%= song.id %>" class="btn btn-outline-secondary">Cancel</a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-save"></i> Create Document
                                    </button>
                                </div>
                            </form>
                        </div>

                        <div class="col-md-4">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        <i class="bi bi-info-circle"></i> Song Info
                                    </h6>

                                    <p class="small">
                                        <strong>Title:</strong>
                                        <%= song.title %><br>
                                            <% if (song.Artists && song.Artists.length> 0) { %>
                                                <strong>Artist:</strong>
                                                <%= song.Artists[0].name %><br>
                                                    <% } %>
                                                        <% if (song.key) { %>
                                                            <strong>Key:</strong>
                                                            <%= song.key %><br>
                                                                <% } %>
                                                                    <% if (song.time) { %>
                                                                        <strong>Time:</strong>
                                                                        <%= Math.floor(song.time / 60) %>:<%= (song.time
                                                                                % 60).toString().padStart(2, '0' ) %>
                                                                                <br>
                                                                                <% } %>
                                    </p>

                                    <h6 class="card-title">
                                        <i class="bi bi-lightbulb"></i> Tips
                                    </h6>
                                    <ul class="small">
                                        <li>Use the table button to create structured layouts</li>
                                        <li>Apply monospace font to preserve spacing in tables</li>
                                        <li>Use headers to organize your content</li>
                                        <li>Save frequently to avoid losing changes</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- TinyMCE -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/6.8.3/tinymce.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        console.log('=== DOM LOADED - TINYMCE INITIALIZING ===');

        // Initialize TinyMCE editor
        tinymce.init({
            selector: '#editor',
            height: 400,
            plugins: 'table lists link',
            toolbar: 'undo redo | formatselect | bold italic underline | alignleft aligncenter alignright | bullist numlist | indent outdent | link table | removeformat',
            menubar: false,
            content_style: `
                body { 
                    font-family: Arial, Helvetica, sans-serif !important; 
                    font-size: 14px !important; 
                    font-weight: 600 !important; 
                    line-height: 1.3 !important; 
                }
                p { 
                    margin: 0.2em 0 !important; 
                    line-height: 1.2 !important; 
                    font-weight: 600 !important;
                }
                p:empty { 
                    margin: 0.1em 0 !important; 
                    height: 0.1em !important; 
                    min-height: 0.1em !important;
                }
                strong, b { 
                    font-weight: 800 !important; 
                }
                .font-serif { 
                    font-family: "Times New Roman", Times, serif !important; 
                }
                .font-sans { 
                    font-family: Arial, Helvetica, sans-serif !important; 
                }
                .font-monospace { 
                    font-family: "Courier New", Courier, monospace !important; 
                }
            `,
            setup: function (editor) {
                // Clean up pasted content from Google Docs
                editor.on('PastePreProcess', function (e) {
                    // Remove bogus br tags and empty paragraphs
                    e.content = e.content.replace(/<br[^>]*data-mce-bogus="1"[^>]*>/gi, '');
                    e.content = e.content.replace(/<p>\s*<\/p>/gi, '<p>&nbsp;</p>');
                });

                // Custom keyboard shortcuts - using keydown events for better control
                editor.on('keydown', function (e) {
                    // Mac: Cmd+] for indent, Cmd+[ for outdent
                    if (e.metaKey && e.key === ']') {
                        e.preventDefault();
                        editor.execCommand('Indent');
                    }
                    if (e.metaKey && e.key === '[') {
                        e.preventDefault();
                        editor.execCommand('Outdent');
                    }
                    // Windows/Linux: Ctrl+] for indent, Ctrl+[ for outdent
                    if (e.ctrlKey && e.key === ']') {
                        e.preventDefault();
                        editor.execCommand('Indent');
                    }
                    if (e.ctrlKey && e.key === '[') {
                        e.preventDefault();
                        editor.execCommand('Outdent');
                    }
                });

                // Update hidden input before form submission
                editor.on('submit', function () {
                    var content = editor.getContent();
                    var hiddenInput = document.getElementById('content');
                    if (hiddenInput) {
                        hiddenInput.value = content;
                        console.log('Content updated in hidden input');
                    }
                });
            }
        });

        // Update hidden input before form submission
        document.querySelector('form[action*="/docs"]').addEventListener('submit', function () {
            console.log('=== FORM SUBMISSION DEBUG ===');
            console.log('Form submit event triggered');

            var content = tinymce.get('editor').getContent();
            console.log('TinyMCE content:', content);
            console.log('TinyMCE content length:', content.length);

            var hiddenInput = document.getElementById('content');
            console.log('Hidden input found:', !!hiddenInput);
            console.log('Hidden input current value:', hiddenInput.value);

            hiddenInput.value = content;
            console.log('Hidden input value after update:', hiddenInput.value);

            console.log('Form submission proceeding...');
        });
    });
</script>