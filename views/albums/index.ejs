<div class="container">
    <div class="row mb-4">
        <div class="col-12">
            <h1>Albums</h1>
            <p class="text-muted">Discover music from bands on The Band Plan</p>
        </div>
    </div>

    <% if (albums && albums.length > 0) { %>
        <div class="row">
            <% albums.forEach(album => { %>
                <div class="col-md-4 col-sm-6 mb-4">
                    <a href="/<%= album.band.slug %>/<%= album.slug %>" class="text-decoration-none">
                        <div class="card h-100 shadow-sm album-card-clickable">
                            <% if (album.artwork) { %>
                                <div class="card-img-top album-artwork-container">
                                    <img src="<%= album.artwork %>" alt="<%= album.title %>" class="album-artwork">
                                </div>
                            <% } else { %>
                                <div class="card-img-top album-artwork-container bg-secondary d-flex align-items-center justify-content-center">
                                    <i class="bi bi-disc display-1 text-white"></i>
                                </div>
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title text-dark"><%= album.title %></h5>
                                <p class="card-text text-muted mb-2">
                                    <a href="/<%= album.band.slug %>" class="text-muted text-decoration-none">
                                        <%= album.band.name %>
                                    </a>
                                </p>
                                <% if (album.releaseDate) { %>
                                    <p class="card-text text-muted small mb-2">
                                        <i class="bi bi-calendar"></i>
                                        <%= new Date(album.releaseDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                    </p>
                                <% } %>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <i class="bi bi-music-note-list"></i> <%= album.tracks.length %> track<%= album.tracks.length !== 1 ? 's' : '' %>
                                    </small>
                                </p>
                                <% if (album.description) { %>
                                    <p class="card-text text-secondary small">
                                        <%= album.description.substring(0, 100) %><%= album.description.length > 100 ? '...' : '' %>
                                    </p>
                                <% } %>
                            </div>
                        </div>
                    </a>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="text-center py-5">
            <i class="bi bi-disc display-1 text-muted"></i>
            <p class="text-muted mt-3">No albums available yet.</p>
        </div>
    <% } %>
</div>

<style>
.album-card-clickable {
    transition: transform 0.2s, box-shadow 0.2s;
    cursor: pointer;
}

.album-card-clickable:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.2) !important;
}

/* Album artwork container - maintains 1:1 aspect ratio (square) */
.album-artwork-container {
    width: 100%;
    aspect-ratio: 1 / 1;
    overflow: hidden;
    position: relative;
}

.album-artwork {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
}
</style>

