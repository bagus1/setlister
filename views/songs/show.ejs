<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>
                    <%= song.title %>
                </h1>
                <% if (song.Artists && song.Artists.length> 0) { %>
                    <p class="text-muted">by <%= song.Artists[0].name %>
                    </p>
                    <% } %>
            </div>
            <div>
                <% if (loggedIn) { %>
                    <a href="/songs/<%= song.id %>/edit" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Song
                    </a>
                    <% } %>
                        <a href="/songs" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Songs
                        </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-music-note"></i> Song Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Title:</strong>
                        <p>
                            <%= song.title %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>Artist:</strong>
                        <p>
                            <% if (song.Artists && song.Artists.length> 0) { %>
                                <%= song.Artists[0].name %>
                                    <% } else { %>
                                        <span class="text-muted">Not specified</span>
                                        <% } %>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <strong>Vocalist:</strong>
                        <p>
                            <% if (song.Vocalist) { %>
                                <%= song.Vocalist.name %>
                                    <% } else { %>
                                        <span class="text-muted">Not specified</span>
                                        <% } %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>Key:</strong>
                        <p>
                            <% if (song.key) { %>
                                <span class="song-key">
                                    <%= song.key %>
                                </span>
                                <% } else { %>
                                    <span class="text-muted">Not specified</span>
                                    <% } %>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <strong>Duration:</strong>
                        <p>
                            <% if (song.time) { %>
                                <%= Math.floor(song.time / 60) %>:<%= (song.time % 60).toString().padStart(2, '0' ) %>
                                        <% } else { %>
                                            <span class="text-muted">Not specified</span>
                                            <% } %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>BPM:</strong>
                        <p>
                            <% if (song.bpm) { %>
                                <i class="bi bi-speedometer"></i>
                                <%= song.bpm %> beats per minute
                                    <% } else { %>
                                        <span class="text-muted">Not specified</span>
                                        <% } %>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <strong>Added:</strong>
                        <p>
                            <%= new Date(song.createdAt).toLocaleDateString() %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <% if (loggedIn) { %>
                    <div class="d-grid gap-2">
                        <a href="/songs/<%= song.id %>/edit" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Song
                        </a>
                        <a href="/songs/new" class="btn btn-outline-success">
                            <i class="bi bi-plus"></i> Add Another Song
                        </a>
                    </div>
                    <% } else { %>
                        <p class="text-muted">
                            <a href="/auth/login">Login</a> to edit songs or add new ones.
                        </p>
                        <% } %>
            </div>
        </div>
    </div>
</div>

<!-- Links Section -->
<div class="row mt-4">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-link-45deg"></i> Links
                </h5>
            </div>
            <div class="card-body">
                <!-- Existing Links -->
                <% if (song.Links && song.Links.length> 0) { %>
                    <div class="mb-4">
                        <h6>Existing Links:</h6>
                        <div class="list-group">
                            <% song.Links.forEach(link=> { %>
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="<%= link.url %>" target="_blank" class="text-decoration-none">
                                            <i class="bi bi-<%= getLinkIcon(link.type) %>"></i>
                                            <%= getLinkDisplayText(link) %>
                                        </a>
                                    </div>
                                    <% if (loggedIn) { %>
                                        <form action="/songs/<%= song.id %>/links/<%= link.id %>?_method=DELETE"
                                            method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                onclick="return confirm('Are you sure you want to delete this link?')">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                        <% } %>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                    <% } else { %>
                        <p class="text-muted mb-4">No links added yet.</p>
                        <% } %>

                            <!-- Add New Link Form -->
                            <% if (loggedIn) { %>
                                <div>
                                    <h6>Add New Link:</h6>
                                    <form action="/songs/<%= song.id %>/links" method="POST">
                                        <div class="row">
                                            <div class="col-md-3">
                                                <label for="type" class="form-label">Type</label>
                                                <select class="form-select" id="type" name="type" required>
                                                    <option value="">Select type...</option>
                                                    <option value="youtube">YouTube</option>
                                                    <option value="spotify">Spotify</option>
                                                    <option value="apple-music">Apple Music</option>
                                                    <option value="soundcloud">SoundCloud</option>
                                                    <option value="bandcamp">Bandcamp</option>
                                                    <option value="lyrics">Lyrics</option>
                                                    <option value="tab">Tab</option>
                                                    <option value="bass tab">Bass Tab</option>
                                                    <option value="chords">Chords</option>
                                                    <option value="tutorial">Tutorial</option>
                                                    <option value="audio">Audio File</option>
                                                    <option value="sheet-music">Sheet Music</option>
                                                    <option value="backing-track">Backing Track</option>
                                                    <option value="karaoke">Karaoke</option>
                                                    <option value="other">Other</option>
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <label for="description" class="form-label">Description
                                                    (Optional)</label>
                                                <input type="text" class="form-control" id="description"
                                                    name="description"
                                                    placeholder="e.g., Official video, Live version, etc.">
                                            </div>
                                            <div class="col-md-4">
                                                <label for="url" class="form-label">URL</label>
                                                <input type="url" class="form-control" id="url" name="url"
                                                    placeholder="https://..." required>
                                            </div>
                                            <div class="col-md-1">
                                                <label class="form-label">&nbsp;</label>
                                                <button type="submit" class="btn btn-primary w-100">
                                                    <i class="bi bi-plus"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <% } else { %>
                                    <p class="text-muted">
                                        <a href="/auth/login">Login</a> to add links to this song.
                                    </p>
                                    <% } %>
            </div>
        </div>
    </div>
</div>