<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="no-cache, no-store, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>
        <% if (typeof title !== 'undefined' && title && title.trim()) { %>
            <%= title %> - The Band Plan
        <% } else { %>
            The Band Plan
        <% } %>
    </title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Bootstrap Select CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css">
    <!-- Custom CSS -->
    <link href="/css/main.css" rel="stylesheet">
    <link href="/css/utilities.css" rel="stylesheet">
    <link href="/css/pages.css" rel="stylesheet">
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="margin-bottom: -5px;">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <!-- Center navigation group -->
                    <ul class="navbar-nav mx-auto d-flex align-items-center" style="">
                        <% if (user) { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/bands" style="background-image: url('/images/circle.png'); background-size: contain; background-repeat: no-repeat; background-position: center; padding: 38px 25px; text-align: center; color: white; position: relative; top: 5px;">My Bands</a>
                            </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/all-bands" style="background-image: url('/images/circle.png'); background-size: contain; background-repeat: no-repeat; background-position: center; padding: 38px 25px; text-align: center; color: white; position: relative; top: 5px;">Bands</a>
                            </li>
                        <% } %>
                        <li class="nav-item">
                            <a class="nav-link" href="/songs" style="background-image: url('/images/trap.png'); background-size: contain; background-repeat: no-repeat; background-position: center; padding: 40px 60px; transform: rotate(-15deg); color: white;">Songs</a>
                        </li>
                        <li class="nav-item" style="margin-right: -20px;margin-left: -5px;">
                            <a class="nav-link navbar-brand" href="/" style="color: white; text-decoration: none; font-weight: bold; background-image: url('/images/hotdog.png'); background-size: contain; background-repeat: no-repeat; background-position: center; padding: 50px 50px;">
                                <i class="bi bi-music-note-list"></i> The Band Plan
                            </a>
                        </li>
                        <li class="nav-item" style="margin-right: 10px;"">
                            <a class="nav-link" href="/artists" style="background-image: url('/images/trap.png'); background-size: contain; background-repeat: no-repeat; background-position: center; padding: 40px 60px; transform: rotate(15deg); color: white;">Artists</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                                href="/venues"
                                style="background-image: url('/images/circle.png'); background-size: contain; background-repeat: no-repeat; background-position: center; padding: 50px 26px; color: white; position: relative; top: 5px;">Venues</a>
                        </li>
                    </ul>

                    <!-- Profile dropdown - far right -->
                    <ul class="navbar-nav">
                        <% if (user) { %>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                    data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle"></i>
                                    <%= user.username %>
                                </a>
                                <ul class="dropdown-menu">
                                    <% if (user && user.id === 1) { %>
                                        <li>
                                            <% 
                                                // Determine current environment and target
                                                const isLocal = hostname === 'localhost' || hostname.includes('localhost');
                                                const currentPath = currentUrl || '/';
                                                let targetUrl, linkText, iconClass;
                                                
                                                if (isLocal) {
                                                    // Currently on local, show link to production
                                                    targetUrl = `https://www.thebandplan.coma${currentPath}`;
                                                    linkText = 'See on prod';
                                                    iconClass = 'bi-cloud';
                                                } else {
                                                    // Currently on production, show link to local
                                                    targetUrl = `http://localhost:3000${currentPath}`;
                                                    linkText = 'See on local';
                                                    iconClass = 'bi-laptop';
                                                }
                                            %>
                                            <a class="dropdown-item" href="<%= targetUrl %>" target="_blank">
                                                <i class="bi <%= iconClass %>"></i> <%= linkText %>
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    <% } %>
                                    <% if (user && (user.role === 'admin' || user.role === 'moderator')) { %>
                                        <li>
                                            <a class="dropdown-item" href="/admin">
                                                <i class="bi bi-speedometer2"></i> Moderator Dashboard
                                            </a>
                                        </li>
                                    <% } %>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form action="/auth/logout" method="POST" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right"></i> Sign Out
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        <% } else { %>
                            <li class="nav-item">
                                <div class="d-flex flex-column">
                                    <a class="nav-link" href="/auth/login?returnTo=<%= encodeURIComponent(currentUrl) %>">Login</a>
                                    <a class="nav-link" href="/auth/register">Register</a>
                                </div>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Global Marquee Header - Updated -->
    <div class="container-fluid px-0 marquee-container">
        <div class="card special-border-card mx-0 marquee-header">
            <div class="card-body text-center py-3">
                <div class="text-center">
                    <% if (typeof hasBandHeader !== 'undefined' && hasBandHeader && band) { %>
                        <h2 class="h5 mb-0 text-dark fw-bold"><%= band.name %></h2>
                    <% } else if (typeof marqueeTitle !== 'undefined' && marqueeTitle) { %>
                        <h2 class="h5 mb-0 text-dark fw-bold"><%= marqueeTitle %></h2>
                    <% } else if (typeof pageTitle !== 'undefined' && pageTitle) { %>
                        <h2 class="h5 mb-0 text-dark fw-bold"><%= pageTitle %></h2>
                    <% } else { %>
                        <h2 class="h5 mb-0 text-dark fw-bold">The Band Plan</h2>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    <% if (typeof success !=='undefined' && success && success.length> 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <% if (typeof error !=='undefined' && error && error.length> 0) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Main Content -->
    <main class="container mt-4">
        <%- body %>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-light mt-5 py-4">
        <div class="container text-center">
            <p>&copy; 2024 The Band Plan. Built for musicians, by musicians.</p>
            <div class="mt-2">
                <small class="text-muted">
                    <a href="/legal" class="text-muted text-decoration-none">Legal</a> |
                    <a href="https://bagus.org/setlists-manager/setlists-manager-tutorial.html" class="text-muted text-decoration-none" target="_blank">Tutorial</a>
                </small>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap Select JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <!-- Custom Scripts -->
    <script>
        // Format time from seconds to MM:SS
        function formatTime(seconds) {
            if (!seconds) return '';
            const minutes = Math.floor(seconds / 60);
            const secs = seconds % 60;
            return `${minutes}:${secs.toString().padStart(2, '0')}`;
        }

        // Initialize Socket.io if on setlist pages
        let socket;
        if ((window.location.pathname.includes('/setlists/') && window.location.pathname.includes('/edit')) ||
            (window.location.pathname.includes('/bands/') && window.location.pathname.includes('/setlists/') && window.location.pathname.includes('/edit'))) {
            socket = io();
            let setlistId;
            // Handle both old and new URL patterns
            if (window.location.pathname.includes('/setlists/')) {
                setlistId = window.location.pathname.split('/')[2];
            } else if (window.location.pathname.includes('/bands/') && window.location.pathname.includes('/setlists/')) {
                setlistId = window.location.pathname.split('/')[4];
            }

            socket.emit('join-setlist', setlistId);

            socket.on('setlist-updated', (data) => {
                // Handle real-time updates from other users
                // console.log('Setlist updated by another user:', data);
                // You can add specific update handling here
            });

            // Leave room when page unloads
            window.addEventListener('beforeunload', () => {
                socket.emit('leave-setlist', setlistId);
            });
        }
    </script>

    <!-- HTML MIDI Player -->
    <script src="https://cdn.jsdelivr.net/combine/npm/tone@14.7.58,npm/@magenta/music@1.23.1/es6/core.js,npm/html-midi-player@1.5.0"></script>
</body>

</html>