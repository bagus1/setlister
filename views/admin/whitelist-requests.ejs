<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0"><i class="bi bi-shield-check"></i> Whitelist Requests</h2>
                <a href="/admin" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Admin
                </a>
            </div>
            
            <% if (requests && requests.length > 0) { %>
                <% requests.forEach(request => { %>
                    <div class="card mb-4 bg-dark text-light">
                        <div class="card-header bg-dark text-light border-secondary d-flex justify-content-between align-items-center">
                            <div class="d-flex gap-2">
                                <span class="badge bg-primary"><%= request.linkType.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase()) %></span>
                                <span class="badge <%= request.status === 'pending' ? 'bg-warning' : request.status === 'approved' ? 'bg-success' : 'bg-danger' %>">
                                    <%= request.status.charAt(0).toUpperCase() + request.status.slice(1) %>
                                </span>
                            </div>
                            <small class="text-muted">
                                <%= new Date(request.createdAt).toLocaleDateString() %> at <%= new Date(request.createdAt).toLocaleTimeString() %>
                            </small>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <strong>Domain:</strong><br>
                                    <span class="text-light"><%= request.domain %></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <strong>Contact Email:</strong><br>
                                    <a href="mailto:<%= request.contactEmail %>" class="text-light"><%= request.contactEmail %></a>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <strong>Example URL:</strong><br>
                                    <a href="<%= request.exampleUrl %>" target="_blank" rel="noopener noreferrer" class="text-light">
                                        <%= request.exampleUrl %>
                                    </a>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <strong>Reason:</strong><br>
                                    <span class="text-light"><%= request.reason %></span>
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-end gap-2">
                                <% if (request.status === 'pending') { %>
                                    <form method="POST" action="/admin/whitelist-requests/<%= request.id %>/approve" style="display: inline;">
                                        <button type="submit" class="btn btn-success">
                                            <i class="bi bi-check-circle"></i> Approve
                                        </button>
                                    </form>
                                    <form method="POST" action="/admin/whitelist-requests/<%= request.id %>/reject" style="display: inline;">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="bi bi-x-circle"></i> Reject
                                        </button>
                                    </form>
                                <% } else { %>
                                    <span class="btn btn-secondary disabled">
                                        <%= request.status === 'approved' ? '<i class="bi bi-check-circle"></i> Approved' : '<i class="bi bi-x-circle"></i> Rejected' %>
                                    </span>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <div class="card bg-dark text-light">
                    <div class="card-body text-center">
                        <h5 class="card-title">No whitelist requests found</h5>
                        <p class="card-text">When users submit domain whitelist requests, they will appear here for your review.</p>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>
