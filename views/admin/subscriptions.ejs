<div class="container mt-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="marquee-title mb-3">
                        <i class="bi bi-credit-card-2-front"></i> Subscription Management
                    </h1>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
                            <li class="breadcrumb-item active">Subscriptions</li>
                        </ol>
                    </nav>
                </div>
                <div>
                    <a href="/admin/subscription-plans" class="btn btn-outline-primary">
                        <i class="bi bi-card-list"></i> Manage Plans
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Flash Messages -->
    <% if (typeof success !== 'undefined' && success.length > 0) { %>
        <div class="alert alert-success alert-dismissible fade show">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>
    <% if (typeof error !== 'undefined' && error.length > 0) { %>
        <div class="alert alert-danger alert-dismissible fade show">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people"></i> Total Users</h5>
                    <h2 class="mb-0"><%= stats.totalUsers %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-check-circle"></i> Active Subscriptions</h5>
                    <h2 class="mb-0"><%= stats.activeSubscriptions %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-currency-dollar"></i> MRR</h5>
                    <h2 class="mb-0">$<%= stats.mrr.toFixed(2) %></h2>
                    <small>Monthly Recurring Revenue</small>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-hdd"></i> Total Storage</h5>
                    <h2 class="mb-0"><%= stats.totalStorageGB %> GB</h2>
                </div>
            </div>
        </div>
    </div>

    <!-- Plan Distribution -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card bg-dark text-white">
                <div class="card-header bg-secondary">
                    <h5 class="mb-0 text-white">Plan Distribution</h5>
                </div>
                <div class="card-body bg-dark">
                    <div class="row text-center">
                        <div class="col-md-4">
                            <div class="p-3">
                                <i class="bi bi-gift fs-1 text-secondary"></i>
                                <h3 class="mt-2 text-white"><%= stats.freeUsers %></h3>
                                <p class="text-muted">Free Users</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3">
                                <i class="bi bi-star fs-1 text-primary"></i>
                                <h3 class="mt-2 text-white"><%= stats.proUsers %></h3>
                                <p class="text-muted">Pro Users</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3">
                                <i class="bi bi-gem fs-1 text-warning"></i>
                                <h3 class="mt-2 text-white"><%= stats.premiumUsers %></h3>
                                <p class="text-muted">Premium Users</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card bg-dark text-white">
        <div class="card-header bg-secondary">
            <h5 class="mb-0 text-white">All Users</h5>
        </div>
        <div class="card-body bg-dark">
            <div class="table-responsive">
                <table class="table table-hover table-dark">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Username</th>
                            <th>Email</th>
                            <th>Plan</th>
                            <th>Status</th>
                            <th>Storage Used</th>
                            <th>Quota</th>
                            <th>Bands</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% users.forEach(user => { %>
                            <tr>
                                <td><%= user.id %></td>
                                <td>
                                    <strong><%= user.username %></strong>
                                    <% if (user.subscription && user.subscription.status === 'active') { %>
                                        <% if (user.subscription.plan.storageQuotaGB === 100) { %>
                                            <span class="badge bg-warning ms-1"><i class="bi bi-gem"></i> Premium</span>
                                        <% } else if (user.subscription.plan.storageQuotaGB === 20) { %>
                                            <span class="badge bg-primary ms-1"><i class="bi bi-star"></i> Pro</span>
                                        <% } %>
                                    <% } %>
                                </td>
                                <td><small><%= user.email %></small></td>
                                <td>
                                    <span class="badge <%= user.planName === 'Premium' ? 'bg-warning' : user.planName === 'Pro' ? 'bg-primary' : 'bg-secondary' %>">
                                        <%= user.planName %>
                                    </span>
                                </td>
                                <td>
                                    <% if (user.status === 'active') { %>
                                        <span class="badge bg-success">Active</span>
                                    <% } else if (user.status === 'canceled') { %>
                                        <span class="badge bg-danger">Canceled</span>
                                    <% } else if (user.status === 'past_due') { %>
                                        <span class="badge bg-warning">Past Due</span>
                                    <% } else { %>
                                        <span class="badge bg-secondary">None</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (user.storageInfo) { %>
                                        <strong><%= user.storageInfo.usedGB.toFixed(2) %> GB</strong>
                                        <br><small class="text-muted"><%= user.storageInfo.usedPercent %>%</small>
                                    <% } else { %>
                                        <span class="text-muted">-</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (user.storageInfo) { %>
                                        <%= user.storageInfo.totalQuotaGB %> GB
                                    <% } else { %>
                                        8 GB
                                    <% } %>
                                </td>
                                <td>
                                    <span class="badge bg-info"><%= user.bands.length %></span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#changePlanModal<%= user.id %>">
                                            <i class="bi bi-pencil"></i> Change
                                        </button>
                                        <% if (user.subscription && user.subscription.status === 'active') { %>
                                            <button type="button" class="btn btn-danger" onclick="cancelSubscription(<%= user.id %>, '<%= user.username %>')">
                                                <i class="bi bi-x-circle"></i> Cancel
                                            </button>
                                        <% } %>
                                    </div>

                                    <!-- Change Plan Modal -->
                                    <div class="modal fade" id="changePlanModal<%= user.id %>" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <form method="POST" action="/admin/subscriptions/<%= user.id %>/change">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Change Plan for <%= user.username %></h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="mb-3">
                                                            <label class="form-label">Select Plan</label>
                                                            <select class="form-select" name="planId" required>
                                                                <% plans.forEach(plan => { %>
                                                                    <option value="<%= plan.id %>" <%= user.subscription?.planId === plan.id ? 'selected' : '' %>>
                                                                        <%= plan.name %> - $<%= (plan.priceMonthly / 100).toFixed(2) %>/mo
                                                                        (<%= plan.storageQuotaGB %> GB, 
                                                                        <%= plan.maxBands ? plan.maxBands + ' bands max' : 'unlimited bands' %>)
                                                                    </option>
                                                                <% }) %>
                                                            </select>
                                                        </div>
                                                        <div class="alert alert-info">
                                                            <i class="bi bi-info-circle"></i>
                                                            <strong>Current:</strong> <%= user.planName %><br>
                                                            <strong>Storage Used:</strong> <%= user.storageInfo ? user.storageInfo.usedGB.toFixed(2) : '0' %> GB
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <button type="submit" class="btn btn-primary">Change Plan</button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    function cancelSubscription(userId, username) {
        if (confirm(`Are you sure you want to cancel ${username}'s subscription?\n\nThey will keep access until the end of their billing period.`)) {
            // Create a form and submit it
            const form = document.createElement('form');
            form.method = 'POST';
            form.action = `/admin/subscriptions/${userId}/cancel`;
            document.body.appendChild(form);
            form.submit();
        }
    }
</script>
