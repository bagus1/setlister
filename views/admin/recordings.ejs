<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="bi bi-music-note-list"></i> Manage All Recordings</h2>
                <div class="text-muted">
                    Total: <strong><%= totalRecordings %></strong> recordings
                </div>
            </div>
        </div>
    </div>

    <!-- Search -->
    <div class="row mb-3">
        <div class="col-12">
            <form method="GET" action="/admin/recordings" class="d-flex gap-2">
                <input type="text" 
                       name="search" 
                       class="form-control" 
                       placeholder="Search by filename, setlist, or band name..."
                       value="<%= search %>">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-search"></i> Search
                </button>
                <% if (search) { %>
                    <a href="/admin/recordings" class="btn btn-outline-secondary">
                        <i class="bi bi-x"></i> Clear
                    </a>
                <% } %>
            </form>
        </div>
    </div>

    <!-- Recordings Table and Storage Stats -->
    <div class="row">
        <div class="col-lg-9">
            <div class="card bg-dark text-white">
                <div class="card-header bg-secondary">
                    <h5 class="mb-0 text-white">Recordings</h5>
                </div>
                <div class="card-body bg-dark">
                    <% if (recordings && recordings.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover table-dark">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Filename</th>
                                        <th>Format</th>
                                        <th>Band / Setlist</th>
                                        <th>Duration</th>
                                        <th>Size</th>
                                        <th>Splits</th>
                                        <th>Creator</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% recordings.forEach(recording => { %>
                                        <% 
                                        const filename = recording.filePath.split('/').pop() || 'Unknown';
                                        const format = filename.split('.').pop() || recording.format || 'webm';
                                        %>
                                        <tr>
                                            <td><%= recording.id %></td>
                                            <td>
                                                <code><%= filename.substring(0, 30) %><%= filename.length > 30 ? '...' : '' %></code>
                                            </td>
                                            <td><span class="badge bg-secondary"><%= format.toUpperCase() %></span></td>
                                            <td>
                                                <strong><%= recording.setlist.band.name %></strong><br>
                                                <small class="text-muted"><%= recording.setlist.title %></small>
                                            </td>
                                            <td>
                                                <%= Math.floor(recording.duration / 60) %>:<%= (recording.duration % 60).toString().padStart(2, '0') %>
                                            </td>
                                            <td>
                                                <% if (recording.fileSize) { %>
                                                    <%= (Number(recording.fileSize) / (1024 * 1024)).toFixed(1) %> MB
                                                <% } else { %>
                                                    <span class="text-muted">â€”</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (recording.isProcessed) { %>
                                                    <span class="badge bg-success"><%= recording._count.splits %> splits</span>
                                                <% } else { %>
                                                    <span class="badge bg-warning">Not split</span>
                                                <% } %>
                                            </td>
                                            <td><%= recording.creator.username %></td>
                                            <td>
                                                <small>
                                                    <%= new Date(recording.createdAt).toLocaleDateString() %>
                                                </small>
                                            </td>
                                            <td>
                                                <a href="/admin/recordings/<%= recording.id %>" 
                                                   class="btn btn-sm btn-outline-light">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (totalPages > 1) { %>
                            <nav>
                                <ul class="pagination justify-content-center">
                                    <% if (hasPrevPage) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/admin/recordings?page=<%= currentPage - 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                                <i class="bi bi-chevron-left"></i> Previous
                                            </a>
                                        </li>
                                    <% } %>
                                    
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                            <a class="page-link" href="/admin/recordings?page=<%= i %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                                <%= i %>
                                            </a>
                                        </li>
                                    <% } %>
                                    
                                    <% if (hasNextPage) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="/admin/recordings?page=<%= currentPage + 1 %><%= search ? '&search=' + encodeURIComponent(search) : '' %>">
                                                Next <i class="bi bi-chevron-right"></i>
                                            </a>
                                        </li>
                                    <% } %>
                                </ul>
                            </nav>
                        <% } %>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-music-note-beamed" style="font-size: 4rem; color: #6c757d;"></i>
                            <h4 class="mt-3 text-white">No Recordings</h4>
                            <p class="text-muted">
                                <%= search ? 'No recordings found matching your search.' : 'No recordings have been created yet.' %>
                            </p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Right Column: Storage Stats & Actions -->
        <div class="col-lg-3">
            <!-- Global Storage Statistics -->
            <div class="card bg-dark text-white mb-4">
                <div class="card-header bg-secondary">
                    <h6 class="mb-0 text-white">
                        <i class="bi bi-bar-chart"></i> Global Storage Stats
                    </h6>
                </div>
                <div class="card-body bg-dark">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small">Total Bands:</span>
                            <strong><%= globalStats.totalBands %></strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small">Bands with Storage:</span>
                            <strong><%= globalStats.bandsWithStorage %></strong>
                        </div>
                    </div>

                    <div class="mb-3 pt-2 border-top border-secondary">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small fw-bold">Total Storage:</span>
                            <strong><%= globalStats.totalStorageGB.toFixed(2) %> GB</strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small text-muted">Avg per Band:</span>
                            <span class="small text-muted"><%= globalStats.avgStoragePerBand.toFixed(2) %> GB</span>
                        </div>
                    </div>

                    <div class="pt-2 border-top border-secondary">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small fw-bold">Recordings Only:</span>
                            <strong><%= globalStats.totalRecordingGB.toFixed(2) %> GB</strong>
                        </div>
                        <div class="small text-muted mt-1">
                            Source files (excludes splits)
                        </div>
                    </div>
                </div>
            </div>

            <!-- Split Statistics -->
            <div class="card bg-dark text-white mb-4">
                <div class="card-header bg-secondary">
                    <h6 class="mb-0 text-white">
                        <i class="bi bi-scissors"></i> Split Statistics
                    </h6>
                </div>
                <div class="card-body bg-dark">
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small">Total Splits:</span>
                            <strong><%= globalStats.totalSplits.toLocaleString() %></strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small">Bands with Splits:</span>
                            <strong><%= globalStats.bandsWithSplits %></strong>
                        </div>
                    </div>

                    <div class="mb-3 pt-2 border-top border-secondary">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small">Processed Recordings:</span>
                            <strong><%= globalStats.processedRecordings %> / <%= globalStats.totalRecordings %></strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small text-muted">Percentage:</span>
                            <span class="small text-muted"><%= globalStats.processedPercentage %>%</span>
                        </div>
                    </div>

                    <div class="mb-3 pt-2 border-top border-secondary">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small fw-bold">Avg Splits/Recording:</span>
                            <strong><%= globalStats.avgSplitsPerRecording %></strong>
                        </div>
                        <div class="small text-muted mt-1">
                            For processed recordings
                        </div>
                    </div>

                    <div class="pt-2 border-top border-secondary">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small fw-bold">Total Split Size:</span>
                            <strong><%= globalStats.totalSplitGB.toFixed(2) %> GB</strong>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small text-muted">Splits with Files:</span>
                            <span class="small text-muted"><%= globalStats.splitsWithFiles.toLocaleString() %></span>
                        </div>
                        <% if (globalStats.splitsMissingFiles > 0) { %>
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small text-warning">Missing Files:</span>
                            <span class="small text-warning"><%= globalStats.splitsMissingFiles.toLocaleString() %></span>
                        </div>
                        <% } %>
                        <% if (globalStats.splitsWithFiles > 0) { %>
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <span class="small text-muted">Avg Size per Split:</span>
                            <span class="small text-muted"><%= globalStats.avgSplitSizeMB.toFixed(1) %> MB</span>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Recalculate Storage Button -->
            <div class="card bg-dark text-white">
                <div class="card-header bg-secondary">
                    <h6 class="mb-0 text-white">
                        <i class="bi bi-tools"></i> Maintenance
                    </h6>
                </div>
                <div class="card-body bg-dark">
                    <form action="/admin/recalculate-storage" method="POST">
                        <button type="submit" 
                                class="btn btn-warning w-100" 
                                onclick="return confirm('This will recalculate storage for ALL bands. This may take a few moments. Continue?');">
                            <i class="bi bi-calculator"></i> Recalculate All Band Storage
                        </button>
                    </form>
                    <p class="small text-muted mt-2 mb-0">
                        Recalculates storage usage for all bands by scanning filesystem and database records.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

