<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= typeof title !=='undefined' ? title : 'Setlist Manager' %> - Setlist Manager
    </title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/main.css" rel="stylesheet">
    <link href="/css/utilities.css" rel="stylesheet">
    <link href="/css/pages.css" rel="stylesheet">
</head>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-music-note-list"></i> Setlist Manager
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <% if (user) { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/bands">My Bands</a>
                        </li>
                        <% } %>
                            <li class="nav-item">
                                <a class="nav-link" href="/songs">Songs</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/artists">Artists</a>
                            </li>
                            <!-- <li class="nav-item">
                                <a class="nav-link" href="/medleys">Medleys</a>
                            </li> -->
                            <li class="nav-item">
                                <a class="nav-link"
                                    href="https://bagus.org/setlists-manager/setlists-manager-tutorial.html"
                                    target="_blank">Tutorial</a>
                            </li>
                </ul>

                <ul class="navbar-nav">
                    <% if (user) { %>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i>
                                <%= user.username %>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    <a class="dropdown-item" href="/admin/whitelist-requests">
                                        <i class="bi bi-shield-check"></i> Manage Whitelist Requests
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form action="/auth/logout" method="POST" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="bi bi-box-arrow-right"></i> Sign Out
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                        <% } else { %>
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/login?returnTo=<%= encodeURIComponent(currentUrl) %>">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/auth/register">Register</a>
                            </li>
                            <% } %>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Band Context Header (conditional) -->
    <% if (typeof hasBandHeader !== 'undefined' && hasBandHeader && band) { %>
    <div class="border-bottom py-3" style="background-color: #ccc;">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center" style="padding-left: 30px;">
                <h2 class="h5 mb-0 text-muted"><%= band.name %></h2>
                <a href="/bands/<%= band.id %>" class="btn btn-outline-secondary btn-sm" style="margin-right: 30px;">
                    <i class="bi bi-arrow-left"></i> Back to Band
                </a>
            </div>
        </div>
    </div>
    <% } %>

    <!-- Flash Messages -->
    <% if (typeof success !=='undefined' && success && success.length> 0) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

            <% if (typeof error !=='undefined' && error && error.length> 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <% } %>

                    <!-- Main Content -->
                    <main class="container mt-4">
                        <%- body %>
                    </main>

                    <!-- Footer -->
                    <footer class="bg-dark text-light mt-5 py-4">
                        <div class="container text-center">
                            <p>&copy; 2024 Setlist Manager. Built for musicians, by musicians.</p>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <a href="/legal" class="text-muted text-decoration-none">Legal</a>
                                </small>
                            </div>
                        </div>
                    </footer>

                    <!-- Scripts -->
                    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                    <script src="/socket.io/socket.io.js"></script>

                    <!-- Custom Scripts -->
                    <script>
                        // Format time from seconds to MM:SS
                        function formatTime(seconds) {
                            if (!seconds) return '';
                            const minutes = Math.floor(seconds / 60);
                            const secs = seconds % 60;
                            return `${minutes}:${secs.toString().padStart(2, '0')}`;
                        }

                        // Initialize Socket.io if on setlist pages
                        let socket;
                        if (window.location.pathname.includes('/setlists/') && window.location.pathname.includes('/edit')) {
                            socket = io();
                            const setlistId = window.location.pathname.split('/')[2];

                            socket.emit('join-setlist', setlistId);

                            socket.on('setlist-updated', (data) => {
                                // Handle real-time updates from other users
                                // console.log('Setlist updated by another user:', data);
                                // You can add specific update handling here
                            });

                            // Leave room when page unloads
                            window.addEventListener('beforeunload', () => {
                                socket.emit('leave-setlist', setlistId);
                            });
                        }
                    </script>
</body>

</html>