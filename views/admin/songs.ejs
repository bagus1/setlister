<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="d-flex align-items-center">
                    <a href="/admin" class="btn btn-outline-secondary me-3">
                        <i class="bi bi-arrow-left"></i> Back to Admin
                    </a>
                    <h2 class="mb-0"><i class="bi bi-music-note"></i> Song Management</h2>
                </div>
                <div class="d-flex gap-2">
                    <a href="/songs/new" class="btn btn-primary">
                        <i class="bi bi-plus"></i> Add New Song
                    </a>
                    <a href="/admin/venue-changes" class="btn btn-outline-primary">
                        <i class="bi bi-clipboard-check"></i> Review Venue Changes
                    </a>
                </div>
            </div>

            <!-- Search and Stats -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <form method="GET" action="/admin/songs" class="d-flex">
                        <input type="text" name="search" class="form-control me-2" 
                               placeholder="Search songs by title, artist, or vocalist..." 
                               value="<%= search %>">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="bi bi-search"></i> Search
                        </button>
                        <% if (search) { %>
                            <a href="/admin/songs" class="btn btn-outline-secondary ms-2">
                                <i class="bi bi-x"></i> Clear
                            </a>
                        <% } %>
                    </form>
                </div>
                <div class="col-md-4">
                    <div class="card bg-primary text-white">
                        <div class="card-body text-center">
                            <h4 class="mb-0"><%= totalSongs %></h4>
                            <small>Total Songs</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Songs Table -->
            <div class="card bg-dark text-light">
                <div class="card-header bg-dark text-light border-secondary">
                    <h5 class="mb-0">
                        <% if (search) { %>
                            Search Results for "<%= search %>"
                        <% } else { %>
                            All Songs
                        <% } %>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <% if (songs && songs.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0 table-dark">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Artist</th>
                                        <th>Vocalist</th>
                                        <th>Key</th>
                                        <th>Creator</th>
                                        <th>Stats</th>
                                        <th>Created</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% songs.forEach(song => { %>
                                        <tr>
                                            <td>
                                                <a href="/songs/<%= song.id %>" class="text-decoration-none">
                                                    <strong><%= song.title %></strong>
                                                </a>
                                            </td>
                                            <td>
                                                <%= song.artist || 'N/A' %>
                                                <% if (song.artists && song.artists.length > 0) { %>
                                                    <br><small class="text-muted">
                                                        <% song.artists.forEach((songArtist, index) => { %>
                                                            <%= songArtist.artist.name %><% if (index < song.artists.length - 1) { %>, <% } %>
                                                        <% }); %>
                                                    </small>
                                                <% } %>
                                            </td>
                                            <td><%= song.vocalist || 'N/A' %></td>
                                            <td>
                                                <% if (song.key) { %>
                                                    <span class="badge bg-secondary"><%= song.key %></span>
                                                <% } else { %>
                                                    N/A
                                                <% } %>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <%= song.creator ? song.creator.username : 'Unknown' %>
                                                </small>
                                            </td>
                                            <td>
                                                <small>
                                                    <i class="bi bi-file-text"></i> <%= song._count.gigDocuments %>
                                                    <i class="bi bi-link-45deg"></i> <%= song._count.links %>
                                                    <i class="bi bi-music-note-list"></i> <%= song._count.bandSongs %>
                                                </small>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <%= new Date(song.createdAt).toLocaleDateString() %>
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="/songs/<%= song.id %>" class="btn btn-outline-primary" title="View">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a href="/songs/<%= song.id %>/edit?fromAdmin=true" class="btn btn-outline-secondary" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger" 
                                                            onclick="deleteSong(<%= song.id %>, '<%= song.title.replace(/'/g, "\\'") %>')" 
                                                            title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <% if (totalPages > 1) { %>
                            <div class="card-footer">
                                <nav aria-label="Songs pagination">
                                    <ul class="pagination pagination-sm justify-content-center mb-0">
                                        <% if (hasPrevPage) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="/admin/songs?page=<%= currentPage - 1 %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %>">
                                                    <i class="bi bi-chevron-left"></i> Previous
                                                </a>
                                            </li>
                                        <% } %>

                                        <% for (let i = Math.max(1, currentPage - 2); i <= Math.min(totalPages, currentPage + 2); i++) { %>
                                            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                                <a class="page-link" href="/admin/songs?page=<%= i %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                        <% } %>

                                        <% if (hasNextPage) { %>
                                            <li class="page-item">
                                                <a class="page-link" href="/admin/songs?page=<%= currentPage + 1 %><% if (search) { %>&search=<%= encodeURIComponent(search) %><% } %>">
                                                    Next <i class="bi bi-chevron-right"></i>
                                                </a>
                                            </li>
                                        <% } %>
                                    </ul>
                                </nav>
                            </div>
                        <% } %>

                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="bi bi-music-note display-1 text-muted"></i>
                            <h4 class="mt-3 text-muted">
                                <% if (search) { %>
                                    No songs found for "<%= search %>"
                                <% } else { %>
                                    No songs found
                                <% } %>
                            </h4>
                            <% if (!search) { %>
                                <p class="text-muted">Get started by adding your first song.</p>
                                <a href="/songs/new" class="btn btn-primary">
                                    <i class="bi bi-plus"></i> Add New Song
                                </a>
                            <% } %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Delete Song</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the song <strong id="deleteSongTitle"></strong>?</p>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i>
                    <strong>Warning:</strong> This will also delete all associated:
                    <ul class="mb-0 mt-2">
                        <li>Gig documents (chords, lyrics, tabs)</li>
                        <li>Links (audio, video, Spotify, YouTube)</li>
                        <li>Setlist entries</li>
                    </ul>
                    This action cannot be undone.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">
                    <i class="bi bi-trash"></i> Delete Song
                </button>
            </div>
        </div>
    </div>
</div>

<script>
let songToDelete = null;

function deleteSong(songId, songTitle) {
    songToDelete = songId;
    document.getElementById('deleteSongTitle').textContent = songTitle;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}

document.getElementById('confirmDelete').addEventListener('click', async function() {
    if (!songToDelete) return;

    try {
        const response = await fetch(`/admin/songs/${songToDelete}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            },
        });

        const result = await response.json();

        if (result.success) {
            // Close modal
            bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
            
            // Show success message
            showAlert('success', 'Song deleted successfully!');
            
            // Reload the page after a short delay
            setTimeout(() => {
                window.location.reload();
            }, 1000);
        } else {
            showAlert('danger', result.error || 'Failed to delete song');
        }
    } catch (error) {
        console.error('Error deleting song:', error);
        showAlert('danger', 'An error occurred while deleting the song');
    }
});

function showAlert(type, message) {
    const alertDiv = document.createElement('div');
    alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
    alertDiv.innerHTML = `
        ${message}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    `;
    
    // Insert at the top of the container
    const container = document.querySelector('.container');
    container.insertBefore(alertDiv, container.firstChild);
    
    // Auto-dismiss after 5 seconds
    setTimeout(() => {
        if (alertDiv.parentNode) {
            alertDiv.remove();
        }
    }, 5000);
}
</script>