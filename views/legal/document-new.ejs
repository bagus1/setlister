<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <a href="/legal" class="btn btn-outline-secondary mb-3">
                <i class="bi bi-arrow-left"></i> Back to Legal Documents
            </a>
            
            <!-- Legal Navigation -->
            <div class="card mb-4">
                <div class="card-body text-center">
                    <div class="d-flex flex-wrap justify-content-center gap-2">
                        <a href="/legal/terms" class="btn btn-sm <%= currentUrl.includes('/terms') ? 'btn-primary' : 'btn-outline-primary' %>">
                            Terms of Service
                        </a>
                        <a href="/legal/privacy" class="btn btn-sm <%= currentUrl.includes('/privacy') ? 'btn-primary' : 'btn-outline-primary' %>">
                            Privacy Policy
                        </a>
                        <a href="/legal/dmca" class="btn btn-sm <%= currentUrl.includes('/dmca') ? 'btn-primary' : 'btn-outline-primary' %>">
                            DMCA Policy
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- Content -->
            <div class="card">
                <div class="card-body">
                    <%- content %>
                </div>
            </div>
        </div>
    </div>
</div>

