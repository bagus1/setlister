<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>
                    <%= song.title %>
                </h1>
                <% if (song.Artists && song.Artists.length> 0) { %>
                    <p class="text-muted">by <%= song.Artists[0].name %>
                    </p>
                    <% } %>
            </div>
            <div>
                <% if (loggedIn) { %>
                    <a href="/songs/<%= song.id %>/edit" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Song
                    </a>
                    <% } %>
                        <a href="/songs" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Songs
                        </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="bi bi-music-note"></i> Song Details
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <strong>Title:</strong>
                        <p>
                            <%= song.title %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>Artist:</strong>
                        <p>
                            <% if (song.Artists && song.Artists.length> 0) { %>
                                <%= song.Artists[0].name %>
                                    <% } else { %>
                                        <span class="text-muted">Not specified</span>
                                        <% } %>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <strong>Vocalist:</strong>
                        <p>
                            <% if (song.Vocalist) { %>
                                <%= song.Vocalist.name %>
                                    <% } else { %>
                                        <span class="text-muted">Not specified</span>
                                        <% } %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>Key:</strong>
                        <p>
                            <% if (song.key) { %>
                                <span class="song-key">
                                    <%= song.key %>
                                </span>
                                <% } else { %>
                                    <span class="text-muted">Not specified</span>
                                    <% } %>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <strong>Duration:</strong>
                        <p>
                            <% if (song.time) { %>
                                <%= Math.floor(song.time / 60) %>:<%= (song.time % 60).toString().padStart(2, '0' ) %>
                                        <% } else { %>
                                            <span class="text-muted">Not specified</span>
                                            <% } %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <strong>BPM:</strong>
                        <p>
                            <% if (song.bpm) { %>
                                <i class="bi bi-speedometer"></i>
                                <%= song.bpm %> beats per minute
                                    <% } else { %>
                                        <span class="text-muted">Not specified</span>
                                        <% } %>
                        </p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <strong>Added:</strong>
                        <p>
                            <%= new Date(song.createdAt).toLocaleDateString() %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">
                    <i class="bi bi-info-circle"></i> Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <% if (loggedIn) { %>
                    <div class="d-grid gap-2">
                        <a href="/songs/<%= song.id %>/edit" class="btn btn-outline-primary">
                            <i class="bi bi-pencil"></i> Edit Song
                        </a>
                        <a href="/songs/new" class="btn btn-outline-success">
                            <i class="bi bi-plus"></i> Add Another Song
                        </a>
                    </div>
                    <% } else { %>
                        <p class="text-muted">
                            <a href="/auth/login">Login</a> to edit songs or add new ones.
                        </p>
                        <% } %>
            </div>
        </div>
    </div>
</div>