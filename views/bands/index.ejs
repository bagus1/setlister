<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1>My Bands</h1>
                <p class="text-muted">Manage your bands and setlists</p>
            </div>
            <div>
                <a href="/bands/new" class="btn btn-primary">
                    <i class="bi bi-plus"></i> Create Band
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <% if (bands && bands.length> 0) { %>
        <% bands.forEach(band=> { %>
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <a href="/bands/<%= band.id %>" class="text-decoration-none">
                                <%= band.name %>
                            </a>
                        </h5>
                        <% if (band.description) { %>
                            <p class="card-text text-muted">
                                <%= band.description %>
                            </p>
                            <% } %>

                                <div class="d-flex justify-content-between align-items-center">
                                                                        <small class="text-muted">
                                        <% const userRole = band.members && band.members.length > 0 ? band.members[0].role : 'member'; %>
                                            <% if (userRole === 'owner') { %>
                                                <i class="bi bi-star-fill text-warning"></i> Owner
                                            <% } else { %>
                                                <i class="bi bi-person"></i> Member
                                            <% } %>
                                    </small>
                                    <small class="text-muted">
                                        Updated <%= new Date(band.updatedAt).toLocaleDateString() %>
                                    </small>
                                </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a href="/bands/<%= band.id %>" class="btn btn-outline-primary btn-sm flex-fill">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a href="/bands/<%= band.id %>/songs" class="btn btn-outline-secondary btn-sm flex-fill">
                                <i class="bi bi-music-note-list"></i> Songs
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
                <% } else { %>
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
                            <h3 class="text-muted mt-3">No bands yet</h3>
                            <p class="text-muted">Create your first band to start managing setlists</p>
                            <a href="/bands/new" class="btn btn-primary">
                                <i class="bi bi-plus"></i> Create Your First Band
                            </a>
                        </div>
                    </div>
                    <% } %>
</div>