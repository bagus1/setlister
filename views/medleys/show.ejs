<%- include('../layout', { title: title }) %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1><%= medley.name %></h1>
                    <div class="d-flex gap-2 align-items-center">
                        <% if (medley.key) { %>
                            <span class="badge bg-secondary">
                                Key: <%= medley.key.replace('_', '#') %>
                            </span>
                        <% } %>
                        <% if (medley.vocalist) { %>
                            <span class="badge bg-info">
                                <%= medley.vocalist.name %>
                            </span>
                        <% } %>
                        <small class="text-muted">
                            Created: <%= medley.createdAt.toLocaleDateString() %>
                        </small>
                    </div>
                </div>
                
                <div class="d-flex gap-2">
                    <a href="/medleys" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Medleys
                    </a>
                    <% if (loggedIn) { %>
                        <a href="/medleys/<%= medley.id %>/edit" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    <% } %>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0">Songs in Medley</h3>
                </div>
                <div class="card-body">
                    <% if (medley.songs && medley.songs.length > 0) { %>
                        <div class="list-group list-group-numbered">
                            <% medley.songs.forEach((medleySong, index) => { %>
                                <div class="list-group-item d-flex justify-content-between align-items-start">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold">
                                            <a href="/songs/<%= medleySong.song.id %>" class="text-decoration-none">
                                                <%= medleySong.song.title %>
                                            </a>
                                        </div>
                                        <div class="d-flex gap-2 align-items-center mt-1">
                                            <% if (medleySong.song.vocalist) { %>
                                                <span class="badge bg-info">
                                                    <%= medleySong.song.vocalist.name %>
                                                </span>
                                            <% } %>
                                            <% if (medleySong.song.artists && medleySong.song.artists.length > 0) { %>
                                                <small class="text-muted">
                                                    <%= medleySong.song.artists.map(a => a.artist.name).join(', ') %>
                                                </small>
                                            <% } %>
                                        </div>
                                    </div>
                                    <span class="badge bg-primary rounded-pill">
                                        <%= medleySong.order %>
                                    </span>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-4">
                            <i class="bi bi-music-note-beamed display-4 text-muted"></i>
                            <p class="text-muted mt-3">No songs in this medley yet</p>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>
