<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>Copy Setlist</h1>
                <a href="/bands/<%= setlist.Band.id %>" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Band
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-files"></i> Copy "<%= setlist.title %>"
                    </h5>
                </div>
                <div class="card-body">
                    <form method="POST" action="/setlists/<%= setlist.id %>/copy">
                        <div class="mb-3">
                            <label for="title" class="form-label">New Setlist Title *</label>
                            <input type="text" class="form-control" id="title" name="title"
                                value="<%= setlist.title %> (Copy)" required>
                            <div class="form-text">Give your new setlist a unique name</div>
                        </div>

                        <div class="mb-3">
                            <label for="date" class="form-label">Performance Date</label>
                            <input type="date" class="form-control" id="date" name="date">
                            <div class="form-text">Optional: Set a new performance date for the copied setlist</div>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="bi bi-info-circle"></i> What will be copied:</h6>
                            <ul class="mb-0">
                                <li>All sets (Set 1, Set 2, Set 3, Set 4, Maybe)</li>
                                <li>All songs in their current order within each set</li>
                                <li>Band association</li>
                            </ul>
                            <hr>
                            <small class="text-muted">
                                <strong>Note:</strong> The new setlist will be created as "not finalized" so you can
                                make changes before finalizing.
                            </small>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-files"></i> Create Copy
                            </button>
                            <a href="/bands/<%= setlist.Band.id %>" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="bi bi-list-check"></i> Original Setlist Preview
                    </h6>
                </div>
                <div class="card-body">
                    <h6>
                        <%= setlist.title %>
                    </h6>
                    <% if (setlist.date) { %>
                        <p class="text-muted mb-3">
                            <i class="bi bi-calendar"></i>
                            <%= new Date(setlist.date).toLocaleDateString() %>
                        </p>
                        <% } %>

                            <% if (setlist.SetlistSets && setlist.SetlistSets.length> 0) { %>
                                <% setlist.SetlistSets.forEach(set=> { %>
                                    <% if (set.SetlistSongs && set.SetlistSongs.length> 0) { %>
                                        <div class="mb-3">
                                            <h6 class="text-primary">
                                                <%= set.name %>
                                            </h6>
                                            <ul class="list-unstyled ms-3">
                                                <% set.SetlistSongs.forEach(setlistSong=> { %>
                                                    <li class="text-muted">
                                                        <small>
                                                            <%= setlistSong.Song.title %>
                                                                <% if (setlistSong.Song.Artists &&
                                                                    setlistSong.Song.Artists.length> 0) { %>
                                                                    - <%= setlistSong.Song.Artists[0].name %>
                                                                        <% } %>
                                                        </small>
                                                    </li>
                                                    <% }) %>
                                            </ul>
                                        </div>
                                        <% } %>
                                            <% }) %>
                                                <% } else { %>
                                                    <p class="text-muted">This setlist has no songs yet.</p>
                                                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>