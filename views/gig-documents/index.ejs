<%- include('../layout', { title: title }) %>

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="bi bi-file-earmark-text"></i> Gig Documents</h1>
                <a href="/gig-documents/new" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> New Gig Document
                </a>
            </div>

            <% if (gigDocuments.length === 0) { %>
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="bi bi-file-earmark-text display-1 text-muted"></i>
                        <h3 class="mt-3">No Gig Documents Yet</h3>
                        <p class="text-muted">Create your first gig document to start automating your gig preparation workflow.</p>
                        <a href="/gig-documents/new" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create First Gig Document
                        </a>
                    </div>
                </div>
            <% } else { %>
                <div class="row">
                    <% gigDocuments.forEach(function(doc) { %>
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="card-title mb-0">
                                            <a href="/gig-documents/<%= doc.id %>" class="text-decoration-none">
                                                <%= doc.title %>
                                            </a>
                                        </h5>
                                        <span class="badge bg-<%= doc.status === 'final' ? 'success' : doc.status === 'archived' ? 'secondary' : 'warning' %>">
                                            <%= doc.status %>
                                        </span>
                                    </div>
                                    
                                    <p class="card-text text-muted small">
                                        <i class="bi bi-music-note-beamed"></i> <%= doc.Band.name %>
                                    </p>
                                    
                                    <% if (doc.venue) { %>
                                        <p class="card-text text-muted small">
                                            <i class="bi bi-geo-alt"></i> <%= doc.venue %>
                                        </p>
                                    <% } %>
                                    
                                    <% if (doc.gigDate) { %>
                                        <p class="card-text text-muted small">
                                            <i class="bi bi-calendar-event"></i> <%= new Date(doc.gigDate).toLocaleDateString() %>
                                        </p>
                                    <% } %>
                                    
                                    <% if (doc.description) { %>
                                        <p class="card-text"><%= doc.description %></p>
                                    <% } %>
                                </div>
                                
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            Created: <%= new Date(doc.createdAt).toLocaleDateString() %>
                                        </small>
                                        <div>
                                            <a href="/gig-documents/<%= doc.id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
</div>
