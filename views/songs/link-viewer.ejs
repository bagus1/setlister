<div class="container mt-4">
    <div class="row justify-content-center">
        <% if (link.type === 'pdf') { %>
            <!-- Two column layout for PDF leadsheets -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-1"><%= song.title %></h4>
                                <p class="text-muted mb-0">
                                    by <strong><%= song.artists && song.artists.length > 0 ? song.artists[0].artist.name : 'Unknown Artist' %></strong>
                                    <% if (song.vocalist) { %>
                                        • Vocals: <strong><%= song.vocalist.name %></strong>
                                    <% } %>
                                </p>
                            </div>
                            <a href="/songs/<%= song.id %>" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Song
                            </a>
                        </div>
                    </div>
                    <div class="card-body text-center">
        <% } else { %>
            <!-- Single column layout for other link types -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h4 class="mb-1"><%= song.title %></h4>
                                <p class="text-muted mb-0">
                                    by <strong><%= song.artists && song.artists.length > 0 ? song.artists[0].artist.name : 'Unknown Artist' %></strong>
                                    <% if (song.vocalist) { %>
                                        • Vocals: <strong><%= song.vocalist.name %></strong>
                                    <% } %>
                                </p>
                            </div>
                            <a href="/songs/<%= song.id %>" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Song
                            </a>
                        </div>
                    </div>
                    <div class="card-body text-center">
        <% } %>
                    <% if (link.type === 'audio') { %>
                        <!-- Audio Player -->
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="bi bi-music-note-beamed"></i> 
                                <%= getLinkDisplayText(link) %>
                            </h5>
                            <audio controls style="width: 100%; max-width: 500px; height: 60px;" class="mb-3">
                                <source src="<%= link.url %>" type="audio/mpeg">
                                <source src="<%= link.url %>" type="audio/wav">
                                <source src="<%= link.url %>" type="audio/ogg">
                                <source src="<%= link.url %>" type="audio/mp4">
                                Your browser does not support the audio element.
                            </audio>
                            <div class="mt-3">
                                <a href="<%= link.url %>" target="_blank" class="btn btn-outline-primary">
                                    <i class="bi bi-download"></i> Download
                                </a>
                                <button onclick="shareLink()" class="btn btn-outline-success">
                                    <i class="bi bi-share"></i> Share
                                </button>
                            </div>
                        </div>
                    <% } else if (link.type === 'spotify') { %>
                        <!-- Spotify Player -->
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="bi bi-spotify"></i> 
                                <%= getLinkDisplayText(link) %>
                            </h5>
                            <% 
                                const spotifyTrackId = extractSpotifyTrackId(link.url);
                                if (spotifyTrackId) { 
                            %>
                                <iframe 
                                    src="https://open.spotify.com/embed/track/<%= spotifyTrackId %>"
                                    width="100%" 
                                    height="352" 
                                    frameborder="0" 
                                    allowtransparency="true" 
                                    allow="encrypted-media"
                                    style="border-radius: 12px; max-width: 500px;">
                                </iframe>
                                <div class="mt-3">
                                    <a href="<%= link.url %>" target="_blank" class="btn btn-outline-primary">
                                        <i class="bi bi-spotify"></i> Open in Spotify
                                    </a>
                                    <button onclick="shareLink()" class="btn btn-outline-success">
                                        <i class="bi bi-share"></i> Share
                                    </button>
                                </div>
                            <% } else { %>
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    Could not extract Spotify track ID from this URL.
                                    <a href="<%= link.url %>" target="_blank" class="btn btn-primary btn-sm ms-2">
                                        <i class="bi bi-spotify"></i> Open in Spotify
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    <% } else if (link.type === 'youtube') { %>
                        <!-- YouTube Player -->
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="bi bi-youtube"></i> 
                                <%= getLinkDisplayText(link) %>
                            </h5>
                            <% 
                                const youtubeVideoId = extractYouTubeVideoId(link.url);
                                if (youtubeVideoId) { 
                            %>
                                <div class="ratio ratio-16x9" style="max-width: 500px; margin: 0 auto;">
                                    <iframe 
                                        src="https://www.youtube.com/embed/<%= youtubeVideoId %>"
                                        title="YouTube video player" 
                                        frameborder="0" 
                                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                                        allowfullscreen>
                                    </iframe>
                                </div>
                                <div class="mt-3">
                                    <a href="<%= link.url %>" target="_blank" class="btn btn-outline-primary">
                                        <i class="bi bi-youtube"></i> Open in YouTube
                                    </a>
                                    <button onclick="shareLink()" class="btn btn-outline-success">
                                        <i class="bi bi-share"></i> Share
                                    </button>
                                </div>
                            <% } else { %>
                                <div class="alert alert-warning">
                                    <i class="bi bi-exclamation-triangle"></i>
                                    Could not extract YouTube video ID from this URL.
                                    <a href="<%= link.url %>" target="_blank" class="btn btn-primary btn-sm ms-2">
                                        <i class="bi bi-youtube"></i> Open in YouTube
                                    </a>
                                </div>
                            <% } %>
                        </div>
                    <% } else if (link.type === 'midi') { %>
                        <!-- MIDI Player -->
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="bi bi-music-note-beamed"></i> 
                                <%= getLinkDisplayText(link) %>
                            </h5>
                            
                            <!-- HTML MIDI Player -->
                            <div class="text-center mb-4">
                                <midi-player 
                                    src="<%= link.url %>" 
                                    sound-font
                                    visualizer="#myVisualizer">
                                </midi-player>
                                <midi-visualizer 
                                    type="piano-roll" 
                                    id="myVisualizer" 
                                    src="<%= link.url %>">
                                </midi-visualizer>
                            </div>
                            
                            <div class="mt-3">
                                <a href="<%= link.url %>" target="_blank" class="btn btn-outline-primary">
                                    <i class="bi bi-download"></i> Download MIDI File
                                </a>
                                <button onclick="shareLink()" class="btn btn-outline-success">
                                    <i class="bi bi-share"></i> Share
                                </button>
                            </div>
                            
                            <div class="mt-3">
                                <small class="text-muted">
                                    <strong>Tip:</strong> This MIDI player uses Web Audio API for playback. You can also import this file into music software like GarageBand, Logic Pro, or FL Studio.
                                </small>
                            </div>
                        </div>
                    <% } else if (link.type === 'pdf') { %>
                        <!-- PDF Lead Sheet Viewer -->
                        <div class="mb-4">
                            <h5 class="mb-3">
                                <i class="bi bi-file-earmark-pdf"></i> 
                                <%= getLinkDisplayText(link) %>
                            </h5>
                            
                            <!-- PDF Embed -->
                            <div class="text-center mb-4">
                                <div class="pdf-viewer-container" style="border: 1px solid #dee2e6; border-radius: 8px; overflow: hidden;">
                                    <iframe 
                                        src="<%= link.url %>#toolbar=0&navpanes=0&scrollbar=0&statusbar=0&messages=0&scrollbar=0" 
                                        width="100%" 
                                        height="700" 
                                        style="border: none;"
                                        title="Lead Sheet PDF">
                                        <p>Your browser does not support PDFs. 
                                            <a href="<%= link.url %>" target="_blank">Download the PDF</a>
                                        </p>
                                    </iframe>
                                </div>
                            </div>
                            
                            <div class="mt-3">
                                <a href="<%= link.url %>" target="_blank" class="btn btn-outline-primary">
                                    <i class="bi bi-download"></i> Download Lead Sheet
                                </a>
                                <button onclick="shareLink()" class="btn btn-outline-success">
                                    <i class="bi bi-share"></i> Share
                                </button>
                                <button onclick="openFullscreen()" class="btn btn-outline-info">
                                    <i class="bi bi-arrows-fullscreen"></i> Fullscreen
                                </button>
                            </div>
                            
                            <div class="mt-3">
                                <small class="text-muted">
                                    <strong>Tip:</strong> Use the fullscreen button for better viewing, or download to print or view in your preferred PDF reader.
                                </small>
                            </div>
                        </div>
                    <% } else { %>
                        <!-- Placeholder for other link types -->
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            Link viewer not yet implemented for <%= getLinkDisplayText(link) %>.
                            <a href="<%= link.url %>" target="_blank" class="btn btn-primary btn-sm ms-2">
                                Open Link
                            </a>
                        </div>
                    <% } %>
                    </div>
                </div>
                
                <% if (link.type === 'pdf') { %>
                    <!-- Song Info Card for PDF layout -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0">Song Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Title:</strong> <%= song.title %></p>
                                    <p><strong>Artist:</strong> <%= song.artists && song.artists.length > 0 ? song.artists[0].artist.name : 'Unknown Artist' %></p>
                                    <% if (song.vocalist) { %>
                                        <p><strong>Vocalist:</strong> <%= song.vocalist.name %></p>
                                    <% } %>
                                </div>
                                <div class="col-md-6">
                                    <% if (song.key) { %>
                                        <p><strong>Key:</strong> <%= song.key %></p>
                                    <% } %>
                                    <% if (song.duration) { %>
                                        <p><strong>Duration:</strong> <%= song.duration %></p>
                                    <% } %>
                                    <% if (song.bpm) { %>
                                        <p><strong>BPM:</strong> <%= song.bpm %></p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } else { %>
                    <!-- Song Info Card for other link types -->
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0">Song Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Title:</strong> <%= song.title %></p>
                                    <p><strong>Artist:</strong> <%= song.artists && song.artists.length > 0 ? song.artists[0].artist.name : 'Unknown Artist' %></p>
                                    <% if (song.vocalist) { %>
                                        <p><strong>Vocalist:</strong> <%= song.vocalist.name %></p>
                                    <% } %>
                                </div>
                                <div class="col-md-6">
                                    <% if (song.key) { %>
                                        <p><strong>Key:</strong> <%= song.key %></p>
                                    <% } %>
                                    <% if (song.duration) { %>
                                        <p><strong>Duration:</strong> <%= song.duration %></p>
                                    <% } %>
                                    <% if (song.bpm) { %>
                                        <p><strong>BPM:</strong> <%= song.bpm %></p>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            
            <% if (link.type === 'pdf') { %>
                <!-- Right column for PDF leadsheets with audio player -->
                <div class="col-lg-4">
                    <!-- Media Player Section -->
                    <% if (song.links && song.links.length > 0) { %>
                        <div class="card mb-3">
                            <div class="card-header">
                                <h6 class="mb-0">
                                    <i class="bi bi-music-note-beamed"></i> Listen While Reading
                                </h6>
                            </div>
                            <div class="card-body">
                                <!-- Link Selection Menu -->
                                <div class="mb-3">
                                    <label class="form-label small">Choose Audio/Video:</label>
                                    <select class="form-select form-select-sm" id="mediaSelect" onchange="loadMediaPlayer()">
                                        <option value="">Select a link...</option>
                                        <% song.links.forEach(linkItem => { %>
                                            <% if (['audio', 'spotify', 'youtube', 'midi'].includes(linkItem.type)) { %>
                                                <% 
                                                    let mediaId = null;
                                                    if (linkItem.type === 'spotify') {
                                                        mediaId = extractSpotifyTrackId(linkItem.url);
                                                    } else if (linkItem.type === 'youtube') {
                                                        mediaId = extractYouTubeVideoId(linkItem.url);
                                                    }
                                                %>
                                                <option value="<%= linkItem.id %>" 
                                                        data-type="<%= linkItem.type %>" 
                                                        data-url="<%= linkItem.url %>"
                                                        data-media-id="<%= mediaId || '' %>">
                                                    <%= getLinkDisplayText(linkItem) %>
                                                </option>
                                            <% } %>
                                        <% }) %>
                                    </select>
                                </div>
                                
                                <!-- Media Player Container -->
                                <div id="mediaPlayerContainer" style="display: none;">
                                    <div id="audioPlayer" style="display: none;">
                                        <audio controls style="width: 100%; height: 40px;">
                                            <source src="" type="audio/mpeg">
                                            <source src="" type="audio/wav">
                                            <source src="" type="audio/ogg">
                                            <source src="" type="audio/mp4">
                                            Your browser does not support the audio element.
                                        </audio>
                                    </div>
                                    
                                    <div id="midiPlayer" style="display: none;">
                                        <div class="text-center">
                                            <midi-player 
                                                src="" 
                                                sound-font
                                                visualizer="#myVisualizer">
                                            </midi-player>
                                            <midi-visualizer 
                                                type="piano-roll" 
                                                id="myVisualizer" 
                                                src="">
                                            </midi-visualizer>
                                        </div>
                                    </div>
                                    
                                    <div id="spotifyPlayer" style="display: none;">
                                        <iframe 
                                            src=""
                                            width="100%" 
                                            height="152" 
                                            frameborder="0" 
                                            allowtransparency="true" 
                                            allow="encrypted-media"
                                            style="border-radius: 8px;">
                                        </iframe>
                                    </div>
                                    
                                    <div id="youtubePlayer" style="display: none;">
                                        <div class="ratio ratio-16x9">
                                            <iframe 
                                                src=""
                                                title="YouTube video player" 
                                                frameborder="0" 
                                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                                                allowfullscreen>
                                            </iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<script>
function shareLink() {
    if (navigator.share) {
        navigator.share({
            title: '<%= song.title %> by <%= song.artists && song.artists.length > 0 ? song.artists[0].artist.name : "Unknown Artist" %>',
            text: 'Listen to <%= song.title %> by <%= song.artists && song.artists.length > 0 ? song.artists[0].artist.name : "Unknown Artist" %>',
            url: window.location.href
        });
    } else {
        // Fallback: copy to clipboard
        navigator.clipboard.writeText(window.location.href).then(() => {
            alert('Link copied to clipboard!');
        }).catch(() => {
            // Fallback: show URL in prompt
            prompt('Copy this link:', window.location.href);
        });
    }
}

function openFullscreen() {
    const iframe = document.querySelector('iframe[title="Lead Sheet PDF"]');
    if (iframe && iframe.requestFullscreen) {
        iframe.requestFullscreen();
    } else if (iframe && iframe.webkitRequestFullscreen) {
        iframe.webkitRequestFullscreen();
    } else if (iframe && iframe.msRequestFullscreen) {
        iframe.msRequestFullscreen();
    } else {
        // Fallback: open PDF in new tab
        window.open('<%= link.url %>', '_blank');
    }
}

function loadMediaPlayer() {
    const select = document.getElementById('mediaSelect');
    const container = document.getElementById('mediaPlayerContainer');
    
    // Hide all players first
    document.getElementById('audioPlayer').style.display = 'none';
    document.getElementById('midiPlayer').style.display = 'none';
    document.getElementById('spotifyPlayer').style.display = 'none';
    document.getElementById('youtubePlayer').style.display = 'none';
    
    if (select && select.value) {
        const option = select.options[select.selectedIndex];
        const type = option.dataset.type;
        const url = option.dataset.url;
        const mediaId = option.dataset.mediaId;
        
        container.style.display = 'block';
        
        if (type === 'audio') {
            const audioPlayer = document.getElementById('audioPlayer');
            const audio = audioPlayer.querySelector('audio');
            audio.src = url;
            audioPlayer.style.display = 'block';
            
        } else if (type === 'midi') {
            const midiPlayer = document.getElementById('midiPlayer');
            const player = midiPlayer.querySelector('midi-player');
            const visualizer = midiPlayer.querySelector('midi-visualizer');
            player.src = url;
            visualizer.src = url;
            midiPlayer.style.display = 'block';
            
        } else if (type === 'spotify' && mediaId) {
            const spotifyPlayer = document.getElementById('spotifyPlayer');
            const iframe = spotifyPlayer.querySelector('iframe');
            iframe.src = `https://open.spotify.com/embed/track/${mediaId}`;
            spotifyPlayer.style.display = 'block';
            
        } else if (type === 'youtube' && mediaId) {
            const youtubePlayer = document.getElementById('youtubePlayer');
            const iframe = youtubePlayer.querySelector('iframe');
            iframe.src = `https://www.youtube.com/embed/${mediaId}`;
            youtubePlayer.style.display = 'block';
        }
    } else if (container) {
        container.style.display = 'none';
    }
}

// Auto-select first option and load player on page load for PDF links
document.addEventListener('DOMContentLoaded', function() {
    <% if (link.type === 'pdf') { %>
        const select = document.getElementById('mediaSelect');
        if (select && select.options.length > 1) {
            // Select the first non-placeholder option (index 1)
            select.selectedIndex = 1;
            loadMediaPlayer();
        }
    <% } %>
});
</script>
