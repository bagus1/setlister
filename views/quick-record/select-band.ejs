<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-record-circle"></i> Quick Record - Select Band
                    </h4>
                </div>
                <div class="card-body">
                    <p class="lead mb-4">Which band are you recording with?</p>

                    <div class="list-group">
                        <% bands.forEach(band => { %>
                            <a href="/quick-record/band/<%= band.id %>" class="list-group-item list-group-item-action">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="mb-1"><%= band.name %></h5>
                                        <small class="text-muted">
                                            <i class="bi bi-music-note"></i> <%= band.setlists.length %> setlists
                                        </small>
                                    </div>
                                    <i class="bi bi-arrow-right"></i>
                                </div>
                            </a>
                        <% }) %>
                    </div>

                    <div class="mt-3">
                        <a href="/" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

