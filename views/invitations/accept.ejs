<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-music-note-beamed"></i>
                        Band Invitation
                    </h4>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <h5>You're invited to join</h5>
                        <h2 class="text-primary">
                            <%= invitation.Band.name %>
                        </h2>
                        <% if (invitation.Band.description) { %>
                            <p class="text-muted">
                                <%= invitation.Band.description %>
                            </p>
                            <% } %>
                                <p class="small text-muted">
                                    Invited to: <strong>
                                        <%= invitation.email %>
                                    </strong>
                                </p>
                    </div>

                    <!-- Error Messages -->
                    <% if (typeof errors !=='undefined' && errors.length> 0) { %>
                        <div class="alert alert-danger">
                            <% errors.forEach(error=> { %>
                                <div>
                                    <%= error.msg %>
                                </div>
                                <% }) %>
                        </div>
                        <% } %>

                            <% if (existingUser) { %>
                                <!-- Login Form -->
                                <h6 class="mb-3">Log in to accept the invitation</h6>
                                <form action="/invite/<%= invitation.token %>/accept" method="POST">
                                    <input type="hidden" name="action" value="login">

                                    <div class="mb-3">
                                        <label for="loginPassword" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="loginPassword"
                                            name="loginPassword" required>
                                    </div>

                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-check-circle"></i>
                                            Log In & Join Band
                                        </button>
                                    </div>
                                </form>

                                <hr>

                                <div class="text-center">
                                    <small class="text-muted">
                                        Not you?
                                        <button class="btn btn-link btn-sm p-0" onclick="showRegisterForm()">
                                            Create new account
                                        </button>
                                    </small>
                                </div>

                                <!-- Hidden Register Form -->
                                <div id="registerForm" style="display: none;">
                                    <h6 class="mb-3 mt-4">Create a new account</h6>
                                    <form action="/invite/<%= invitation.token %>/accept" method="POST">
                                        <input type="hidden" name="action" value="register">

                                        <div class="mb-3">
                                            <label for="username" class="form-label">Username</label>
                                            <input type="text" class="form-control" id="username" name="username"
                                                value="<%= typeof username !== 'undefined' ? username : '' %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="password" class="form-label">Password</label>
                                            <input type="password" class="form-control" id="password" name="password"
                                                required>
                                            <div class="form-text">At least 6 characters</div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                                            <input type="password" class="form-control" id="confirmPassword"
                                                name="confirmPassword" required>
                                        </div>

                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-success">
                                                <i class="bi bi-person-plus"></i>
                                                Create Account & Join Band
                                            </button>
                                        </div>
                                    </form>
                                </div>

                                <% } else { %>
                                    <!-- Register Form -->
                                    <h6 class="mb-3">Create your account to join the band</h6>
                                    <form action="/invite/<%= invitation.token %>/accept" method="POST">
                                        <input type="hidden" name="action" value="register">

                                        <div class="mb-3">
                                            <label for="username" class="form-label">Username</label>
                                            <input type="text" class="form-control" id="username" name="username"
                                                value="<%= typeof username !== 'undefined' ? username : '' %>" required>
                                        </div>

                                        <div class="mb-3">
                                            <label for="password" class="form-label">Password</label>
                                            <input type="password" class="form-control" id="password" name="password"
                                                required>
                                            <div class="form-text">At least 6 characters</div>
                                        </div>

                                        <div class="mb-3">
                                            <label for="confirmPassword" class="form-label">Confirm Password</label>
                                            <input type="password" class="form-control" id="confirmPassword"
                                                name="confirmPassword" required>
                                        </div>

                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="bi bi-person-plus"></i>
                                                Create Account & Join Band
                                            </button>
                                        </div>
                                    </form>

                                    <hr>

                                    <div class="text-center">
                                        <small class="text-muted">
                                            Already have an account?
                                            <a href="/auth/login?returnTo=<%= encodeURIComponent(currentUrl) %>" class="text-decoration-none">Log in here</a>
                                        </small>
                                    </div>
                                    <% } %>

                                        <div class="mt-4 text-center">
                                            <small class="text-muted">
                                                <i class="bi bi-clock"></i>
                                                This invitation expires on <%= new
                                                    Date(invitation.expiresAt).toLocaleDateString() %>
                                            </small>
                                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showRegisterForm() {
        document.getElementById('registerForm').style.display = 'block';
    }

// Show register form if there were validation errors
<% if (typeof action !== 'undefined' && action === 'register') { %>
        showRegisterForm();
<% } %>
</script>