<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= gigDocument.title %> - <%= gigDocument.Song.title %>
    </title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            font-size: 11pt;
            line-height: 1.2;
        }

        .song-title {
            font-size: 14pt;
            font-weight: bold;
            margin-bottom: 10px;
            text-align: center;
        }

        .document-content {
            margin: 0;
            padding: 0;
        }

        .document-content p {
            margin: 0.2em 0;
            line-height: 1.2;
        }

        /* Quill indentation classes */
        .ql-indent-1 {
            margin-left: 2em !important;
        }

        .ql-indent-2 {
            margin-left: 4em !important;
        }

        .ql-indent-3 {
            margin-left: 6em !important;
        }

        .ql-indent-4 {
            margin-left: 8em !important;
        }

        .ql-indent-5 {
            margin-left: 10em !important;
        }

        .ql-indent-6 {
            margin-left: 12em !important;
        }

        .ql-indent-7 {
            margin-left: 14em !important;
        }

        .ql-indent-8 {
            margin-left: 16em !important;
        }

        /* Font weight overrides for gig document content */
        .document-content {
            font-weight: 600 !important;
            /* Normal text = 600 */
        }

        .document-content strong,
        .document-content b {
            font-weight: 800 !important;
            /* Bold text = 800 */
        }

        /* Quill font family classes */
        .ql-font-serif {
            font-family: "Times New Roman", Times, serif !important;
        }

        .ql-font-sans {
            font-family: Arial, Helvetica, sans-serif !important;
        }

        .ql-font-monospace {
            font-family: "Courier New", Courier, monospace !important;
        }

        @media print {
            body {
                margin: 0 !important;
                padding: 0 !important;
            }

            .song-title {
                margin-bottom: 5px !important;
            }

            .document-content {
                margin-left: 0.75in !important;
            }

            /* Hide the print button when printing */
            button {
                display: none !important;
            }
        }
    </style>
</head>

<body>
    <div class="song-title">
        <%= gigDocument.Song.title %>
            <% if (gigDocument.Song.Artists && gigDocument.Song.Artists.length> 0) { %>
                - <%= gigDocument.Song.Artists.map(a=> a.name).join(', ') %>
                    <% } %>
    </div>

    <div style="text-align: center; margin-bottom: 15px;">
        <button onclick="window.print()"
            style="padding: 8px 16px; font-size: 12pt; background: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer;">
            Print
        </button>
    </div>

    <div class="document-content">
        <% if (gigDocument.content && gigDocument.content.trim()) { %>
            <%- gigDocument.content %>
                <% } else { %>
                    <p>No content available.</p>
                    <% } %>
    </div>
</body>

</html>