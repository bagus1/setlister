<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 mb-0">Bands</h1>
        </div>

        <% if (bands && bands.length > 0) { %>
            <div class="row">
                <% bands.forEach(band => { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <i class="bi bi-music-note-list text-primary me-2"></i>
                                    <%= band.name %>
                                </h5>
                                <p class="card-text text-muted">
                                    <i class="bi bi-music-note me-1"></i>
                                    <%= band._count.songs %> songs
                                </p>
                                <% if (band.description) { %>
                                    <p class="card-text">
                                        <%= band.description %>
                                    </p>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <i class="bi bi-music-note-list display-1 text-muted"></i>
                <h3 class="mt-3 text-muted">No Bands Found</h3>
                <p class="text-muted">There are no bands available at the moment.</p>
            </div>
        <% } %>
    </div>
</div>
