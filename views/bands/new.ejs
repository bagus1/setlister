<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-people"></i> Create New Band
                </h4>
            </div>
            <div class="card-body">
                <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                    <div class="alert alert-danger">
                        <ul class="mb-0">
                            <% errors.forEach(error => { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <% } %>

                        <form action="/bands" method="POST">
                            <div class="mb-3">
                                <label for="name" class="form-label">Band Name *</label>
                                <input type="text" class="form-control" id="name" name="name"
                                    value="<%= typeof name !== 'undefined' ? name : '' %>" required>
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Description (Optional)</label>
                                <textarea class="form-control" id="description" name="description" rows="3"
                                    placeholder="Describe your band's style, goals, or any other details..."><%= typeof description !== 'undefined' ? description : '' %></textarea>
                            </div>

                            <div class="d-flex justify-content-between">
                                <a href="/bands" class="btn btn-outline-secondary">
                                    <i class="bi bi-arrow-left"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-plus"></i> Create Band
                                </button>
                            </div>
                        </form>
            </div>
        </div>
    </div>
</div>