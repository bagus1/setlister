<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Music Stand Documents for "<%= song.title %>"</h1>
        <div>
            <a href="/songs/<%= song.id %>" class="btn btn-outline-secondary me-2">
                <i class="bi bi-arrow-left"></i> Back to Song
            </a>
            <a href="/songs/<%= song.id %>/docs/new" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> New Gig Document
            </a>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Song Details</h5>
                    <p><strong>Artist:</strong>
                        <%= song.artists.map(a=> a.artist.name).join(', ') %>
                    </p>
                    <% if (song.vocalist) { %>
                        <p><strong>Vocalist:</strong>
                            <%= song.vocalist.name %>
                        </p>
                        <% } %>
                            <% if (song.key) { %>
                                <p><strong>Key:</strong>
                                    <%= song.key %>
                                </p>
                                <% } %>
                                    <% if (song.duration) { %>
                                        <p><strong>Duration:</strong>
                                            <%= song.duration %>
                                        </p>
                                        <% } %>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create New Gig Document</h5>
                    <p class="card-text">Add a new gig document for this song.</p>
                    <a href="/songs/<%= song.id %>/docs/new" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> New Gig Document
                    </a>
                </div>
            </div>
        </div>
    </div>

    <% if (gigDocuments.length===0) { %>
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            No Music Stand documents found for this song. Create your first one to get started!
        </div>
    <% } else { %>
        <% 
            // Group documents by type 
            const documentsByType={}; 
            gigDocuments.forEach(doc=> {
                if (!documentsByType[doc.type]) {
                documentsByType[doc.type] = [];
                }
                documentsByType[doc.type].push(doc);
            });
        %>

        <% Object.keys(documentsByType).forEach(type=> { %>
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <%= getTypeIcon(type) %>
                    <%= getTypeDisplayName(type) %>
                    <span class="badge bg-secondary ms-2">
                        <%= documentsByType[type].length %> document(s)
                    </span>
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <% documentsByType[type].forEach(doc=> { %>
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h6 class="card-title">
                                        Version <%= doc.version %>
                                        <% if (doc.isActive) { %>
                                            <span class="badge bg-success ms-2">Active</span>
                                        <% } %>
                                    </h6>
                                    <p class="card-text text-muted">
                                        Created: <%= new Date(doc.createdAt).toLocaleDateString() %>
                                    </p>
                                    <div class="btn-group-vertical w-100">
                                        <a href="/songs/<%= song.id %>/docs/<%= doc.id %>"
                                            class="btn btn-outline-primary btn-sm">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a href="/songs/<%= song.id %>/docs/<%= doc.id %>/edit"
                                            class="btn btn-outline-secondary btn-sm">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
        <% }); %>
    <% } %>
</div>