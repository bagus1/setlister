<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1>My Profile</h1>
                <div>
                    <% if (profile.isPublic && profile.slug) { %>
                        <a href="/musicians/<%= profile.slug %>" class="btn btn-outline-primary me-2" target="_blank">
                            <i class="bi bi-eye"></i> View Public Profile
                        </a>
                    <% } %>
                    <a href="/profile/edit" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Profile Summary Card -->
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <% if (profile.photos && profile.photos.length > 0) { %>
                        <% const primaryPhoto = profile.photos.find(p => p.isPrimary) || profile.photos[0]; %>
                        <img src="<%= primaryPhoto.filePath %>" alt="<%= profile.username %>" 
                             class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <% } else { %>
                        <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3"
                             style="width: 150px; height: 150px;">
                            <i class="bi bi-person-fill" style="font-size: 4rem;"></i>
                        </div>
                    <% } %>
                    
                    <h3><%= profile.username %></h3>
                    
                    <% if (profile.instruments) { %>
                        <p class="text-muted mb-2">
                            <i class="bi bi-music-note-beamed"></i> <%= profile.instruments %>
                        </p>
                    <% } %>
                    
                    <% if (profile.location) { %>
                        <p class="text-muted mb-2">
                            <i class="bi bi-geo-alt"></i> <%= profile.location %>
                        </p>
                    <% } %>
                    
                    <% if (profile.website) { %>
                        <p class="mb-2">
                            <a href="<%= profile.website %>" target="_blank">
                                <i class="bi bi-link-45deg"></i> Website
                            </a>
                        </p>
                    <% } %>

                    <hr>

                    <div class="mb-2">
                        <% if (profile.isPublic) { %>
                            <span class="badge bg-success">
                                <i class="bi bi-globe"></i> Public Profile
                            </span>
                        <% } else { %>
                            <span class="badge bg-secondary">
                                <i class="bi bi-lock"></i> Private Profile
                            </span>
                        <% } %>
                        
                        <% if (profile.openToOpportunities) { %>
                            <span class="badge bg-info">
                                <i class="bi bi-envelope-check"></i> Open to Opportunities
                            </span>
                        <% } %>
                    </div>

                    <% if (profile.slug) { %>
                        <small class="text-muted">
                            thebandplan.com/musicians/<%= profile.slug %>
                        </small>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Bio & Details -->
        <div class="col-md-8 mb-4">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-lines-fill"></i> About Me</h5>
                </div>
                <div class="card-body">
                    <% if (profile.bio) { %>
                        <p class="mb-0"><%= profile.bio %></p>
                    <% } else { %>
                        <p class="text-muted mb-0">
                            No bio added yet. 
                            <a href="/profile/edit">Add a bio</a> to tell people about yourself!
                        </p>
                    <% } %>
                </div>
            </div>

            <!-- My Bands -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-people"></i> My Bands</h5>
                </div>
                <div class="card-body">
                    <% if (profile.bands && profile.bands.length > 0) { %>
                        <div class="list-group">
                            <% profile.bands.forEach(membership => { %>
                                <a href="/bands/<%= membership.band.id %>" class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <strong><%= membership.band.name %></strong>
                                            <% if (membership.instrument) { %>
                                                <br><small class="text-muted"><%= membership.instrument %></small>
                                            <% } %>
                                        </div>
                                        <% if (membership.role === 'owner') { %>
                                            <span class="badge bg-primary">Owner</span>
                                        <% } %>
                                    </div>
                                </a>
                            <% }) %>
                        </div>
                    <% } else { %>
                        <p class="text-muted mb-0">
                            Not in any bands yet. 
                            <a href="/bands/new">Create a band</a> to get started!
                        </p>
                    <% } %>
                </div>
            </div>

            <!-- Photo Gallery -->
            <% if (profile.photos && profile.photos.length > 0) { %>
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-images"></i> Photos</h5>
                </div>
                <div class="card-body">
                    <div class="row g-2">
                        <% profile.photos.forEach(photo => { %>
                            <div class="col-md-4 col-sm-6">
                                <div class="position-relative">
                                    <img src="<%= photo.filePath %>" alt="<%= photo.caption || profile.username %>"
                                         class="img-fluid rounded" style="width: 100%; height: 200px; object-fit: cover;">
                                    <% if (photo.isPrimary) { %>
                                        <span class="badge bg-primary position-absolute top-0 end-0 m-2">
                                            <i class="bi bi-star-fill"></i> Primary
                                        </span>
                                    <% } %>
                                </div>
                                <% if (photo.caption) { %>
                                    <small class="text-muted"><%= photo.caption %></small>
                                <% } %>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

