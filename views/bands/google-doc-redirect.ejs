<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-body text-center">
          <div class="mb-4">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
          <h4>Processing Google Doc...</h4>
          <p class="text-muted">
            Please wait while we extract your songs from the Google Doc.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Auto-submit form to the existing Google Doc processing route -->
<form
  id="googleDocForm"
  method="POST"
  action="/google-docs/admin/process-google-doc"
  style="display: none"
>
  <input type="hidden" name="googleDocUrl" value="<%= googleDocUrl %>" />
  <input type="hidden" name="bandId" value="<%= bandId %>" />
  <input type="hidden" name="listType" value="<%= listType %>" />
</form>

<script>
  // Auto-submit the form immediately
  document.addEventListener("DOMContentLoaded", function () {
    document.getElementById("googleDocForm").submit();
  });
</script>
